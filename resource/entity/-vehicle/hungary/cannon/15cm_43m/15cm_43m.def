{game_entity
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc" scale(0.6))
	{Extension "15cm_43m.mdl"}
	(include "/properties/selection/cannon.inc" scale(0.7))
	{props "nebelwerfer" "wheeled" "vision_lev05_can" "cannon_sandbag_standard" "trailer" "trailer_light" "detect_artillery" "artillery_minimap_medium"}
	{able "emit_on_attack"}
	{targetclass "howitzer"}
	{targetSelector "rocket"}

	{volume "body2"
		{tags "body"}
		{component "body"}
	}

	("wheel" args "wheelright")
	("wheel" args "wheelleft")
	("gun" repair(30) thickness(10))

	("armor_light_cannon")

	("crew_wheeled_cannon")
	

	{boarder
		{anm "gunner"
			{forward {end "pose_pak40_gunlayer" 10}}  
		}
		{anm "commander"
			{forward {end "pose_pak40_charger" 10}}
		}
		{anm "driver1"
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "seat1"
			{forward {end "pose_seat_cannon1_left" 10}}
		}
		{anm "seat2"
			{forward {end "pose_seat_cannon1_right" 10}}
		}
		{link "driver1" "gunner"}
		{link "driver2" "commander"}
		{link "seat1" "driver1"}
		{link "seat2" "driver2"}

	}
	{extender "inventory"
		{box
			{item "ammo 150mm_nebelwerfer" 30}
			{item "sandbag_vehicle" 1}
		}
	}
	{Weaponry
		{place "gun"
			{Barrels 6}
			{weapon "weapon 150mm_nebelwerfer" filled}
			{RestoreIKAfterAim}
			{StationaryFiring}
			("abm_dymamic_gun"
				zeroing(6.0)	; // time it takes to aim until the reticle shrinks. Bigger values, more control.
				dispersion(1)   ; // time it takes to distort the reticle when you move the gun (how abrupt it loses zeroing). Bigger values, more control.
			)
		}
	}

	{mass 540}
	{Chassis "track"
		("car_trace" fx("tracewheel05") step(0.07) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility_cannon"
			speed(7.9) ;----------------------------------Max speed.
			weight(540) ;---------------------------------Weight in Kilograms.
		)
	}

	{extender "cannon"
		{animation
			{switch "close"}
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right"}
			{aim "cannon_m42_gunlayer" ""}
			{fire  "Cannon_gunlayer_fire-alert" "cannon_m42_charger_fire"}
			{reload  "" "cannon_m42_charger"}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
	}
		
	(mod "mp"
		{brain
			{properties
				{fire_mode hold}
			}
		}	
	)
}