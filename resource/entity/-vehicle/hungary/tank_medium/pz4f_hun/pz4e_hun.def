	("tracks" repair(30) thickness(20))
	("gun" repair(30) thickness(25))

	("ammo" args "ammo1")
	("ammo" args "ammo2")
	("ammo" args "ammo3")
	("transmission" args "transmission")	

	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 30
			{front 50}
			{top 22}	
			{rear 20}
			{bottom 20}
		}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 30
			{front 50}
			{top 22}	
			{rear 20}
			{bottom 20}
		}
	}
	{volume "engine"
		{tags "engine"}
		{component "engine"}
		{thickness 30
			{front 30}
			{top 20}	
			{rear 22}
			{bottom 20}
		}
	}
	{volume "mantlet"
		{tags "gun"}
		{component "gun"}
		{thickness 50}
	}
	{volume "turret"
		{tags "turret"}
		{component "turret"}
		{thickness 30
			{front 50}
			{top 10}	
			{rear 30}
			{bottom 10}
		}
	}
	
	{extender "enumerator"
		{digit_folder "ger"}
	}

	{sensor
		{visor "main"
			{vision "tank_range_210"}
		}
	}

	("crew_5_human_extended")
	("gunner_visible")

	{boarder
		{anm "driver"
			{forward	{begin	"board_pz4_driver"} {end "pose_mgun_pz6"} {base "open_driver"}}
			{reverse 	{end	"board_pz4_driver" -1} {base "open_driver" -1}}
		}
		{anm "left"
			{forward	{begin	"board_cromwell"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"board_cromwell" -1}}
		}
		{anm "right"
			{forward	{begin	"board_cromwell"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"board_cromwell" -1}}
		}
		{anm "armor"
			{forward	{begin	"board_MiddleArmor"} 	{end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_tank_1"}}
		}
		{anm "armor1"
			{forward	{begin	"board_MiddleArmor"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_tank_1"}}
		}
	}

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor1))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor))

	{extender "shield" {on}}
	
	{extender "inventory"
		{box
			{item "bulletger_75_l24 apcbche" 25} 		; 80 rounds
			{item "bulletger_75_l24 he" 40}
			{item "bulletger_75_l24 heatb" 10}
			{item "bulletger_75_l24 sm" 4}
			{item "ammo mgun_ger belt" 2850}		; 21 belts (150 rounds each)
			{item "geballteladung_3kg" 1}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "75mm_kwk37" filling "bulletger_75_l24 apcbche" 1}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic"
				zeroing(4.0)
				dispersion(0.20)
			)
		}
		{place "mgun2"
			{type "coaxial"}
			{weapon "mg34_tank" filled}
			{foresight "foresight5"}
			{gunner "gunner"}
			{charger "charger"}
			("abm_mgun")
			{basic}
		}
		{place "mgun1"
			{type "hull"}
			{weapon "mg34_tank" filled}
			{foresight "foresight4"}
			{gunner "gunner3"}
			{charger "gunner3"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
	}

	{mass 25000}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.52) len(0.7))
		("mobility_tank"
			speed(38) ;----------Max speed when fully accelerated on road, km/h.
			reverse(8) ;---------Max speed in reverse on road, km/h.
			traverse(30) ;-------Track traverse, per second, in degrees.
			weight(25.0) ;-------Weight in Tonnes.
			power(265) ;---------Engine Power, in hp. //engine under normal use was rated 265hp at 2600 rpm
			track(4.5) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(470) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(130) ;---------Range in km, off-road.
		)
	}

	{bone "gun_rot"
		{limits -10 20}
		{speed2 5}
	}
	{bone "turret"
		{speed2 14}
	}
}
