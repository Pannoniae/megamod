	("tank_light_tier1")
	("tracks" repair(30) thickness(15))
	("gun" repair(30) thickness(20))
	("ammo" args "ammo1")
	("transmission" args "transmission")

	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 15
			{front 25}
			{top 8}
			{rear 15}
			{bottom 8}
