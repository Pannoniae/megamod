{game_entity
	(include "/properties/halftrack.ext")
	(include "/properties/selection/vehicle.inc" scale(1.0))
	{props "truck" "vision_lev02" "tractor" "tractor_heavy" "Captor"}
	{able "emit_passengers_on_enemy"}
	{extension "hansa_lloyd.mdl"}
	{collider "truck"}
	{patherId "sdkfz251"}
	("armoredcar_tier1")

	{volume "sticky"
		{tags "grenade_fg_target"}
		{able clear {contact} {touch}}
		{component "sticky_body"}
	}
	{component "sticky_body"}

	{volume "body"
		{tags "body"}
		{component "body"}
		{thickness 3}
	}
	{volume "cabin"
		{tags "body"}
		{component "body"}
		{thickness 3}
	}
	{volume "engine"
		{tags "engine"}
		{component "engine"}
		{thickness 3}
	}
	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("glass" args "glass1")
	("glass" args "glass2")
	
	("crew_2_human")
	("board_animation"
		place(driver)
		board_begin(board_big-midcar_driver)
		board_end(seat_driver_car)
		base(doorl)
	)
	("board_animation"
		place(commander)
		board_begin(board_big-midcar)
		board_end(seat_passenger)
		base(doorr)
	)
	{boarder
		{anm "passengers"
			{forward	{begin	"board_SdKfz251-1"} {end "seat_passenger"}}
			{reverse	{end	"emit_tank_1"}}
		}
		{anm "passengers1"
			{forward	{begin	"board_SdKfz251-1"} {end "seat_passenger"}}
			{reverse	{end	"emit_body"}}
		}
	}
	(define "crew_human"
		{placer
			{place "%place" {group "%group"} {linkbone "%bone"} {turnoff {sensor} {shadow}}}
		}
		{boarder
			{door "%door"}
			{link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
		}
	)
	("crew" place(driver)		bone(driver)	door(emit1)		animation(driver)		visor(driver)	off({sensor}))
	("passenger" place(commander) bone(commander) door(emit2)  animation(commander)  off())
	("crew_human" place(seat1)	door(emit3) bone(seat01) animation(passengers)	group(passengers))
	("crew_human" place(seat2)	door(emit4) bone(seat02) animation(passengers1)	group(passengers))
	("crew_human" place(seat3)	door(emit4) bone(seat03) animation(passengers)	group(passengers))
	("crew_human" place(seat4)	door(emit3) bone(seat04) animation(passengers1)	group(passengers))
	{sensor
		{visor "human"
			{vision "none"}
		}
		{visor "around"
			{vision "none"}
		}
	}

	{extender "inventory"
		{Box
			{item "repair_kit" 5}
		}
	}

	{mass 8500}
	{Chassis "wheel"
		("tank_trace_ex" fx("tracks_sm2") step(0.2) len(0.46) boneleft("FXtraceL3") boneright("FXtraceR3"))
		("car_trace" fx("tracewheel03a") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility_car"
			speed(53) ;----------------------------------Max speed.
			speedatmaxturn(14) ;-------------------------Max speed at max turn.
			reverse(9) ;---------------------------------Max speed in Reverse.
			weight(8.5) ;--------------------------------Weight in Tonnes.
			power(100) ;---------------------------------Horse Power.
			fuel(160) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(150) ;---------------------------------Range in Kilometers.
		)
	}
}