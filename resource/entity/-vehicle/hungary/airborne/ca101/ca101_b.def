{game_entity
	(include "/properties/airborne.ext")
	(include "/properties/selection/airborne.inc" scale(3.0))
	{props "wheeled" "vision_lev02_air"}
	{PatherID "bf110"}
	("fighter_tier2")
	
	{extender "enumerator"
		{digit_folder "red"}
	}
	{Placer
		{place "driver" {turnOff {targetable}}}
		{place "commander" {turnOff {targetable}}}
		{place "gunner" {turnOff {targetable}} {visor "rear"}}
	}
	{sensor
		{Visor "main"
			{bone "pivot_back"}
		}
		{visor "rear"
			{vision "vehicle_top_mgun"} 
			{bone "mgun_rot"}
		}
	}

	("engine"		volume(engine)	number(1_1))
	("engine"		volume(engine)	number(1_3))
	("engine"		volume(engine)	number(2_1))
	("engine"		volume(engine)	number(2_3))
	("engine"		volume(engine)	number(3_2))
	

	{boarder
		{anm "driver"
			{forward	{begin	"board_dodge_bodyback"} {end "seat_driver_car"} {base "open"}}
			{reverse 	{end	"board_dodge_bodyback" -1} {base "open" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_dodge_bodyback"} {end "seat_driver_car"} {base "open"}}
			{reverse 	{end	"board_dodge_bodyback" -1} {base "open" -1}}
		}
		{anm "gunner"
			{forward	{begin	"board_dodge_bodyback"} {end "seat_gunner_stand"} {base "open"}}
			{reverse 	{end	"board_dodge_bodyback" -1} {base "open" -1}}
		}
		{anm "passengers"
			{forward	{begin	"board_dodge_bodyback"} {end "seat_driver_car"} {base "open"}}
			{reverse 	{end	"board_dodge_bodyback" -1} {base "open" -1}}
		}
	}

	(define "crew_human"
		{placer
			{place "%place" {group "%group"} {linkbone "%bone"} {turnoff {sensor} {shadow}}}
		}
		{boarder
			{door "%door"}
			{link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
		}
	)

	("crew_human" place(driver) bone(driver) door(emit1) animation(driver) group(crew))
	("crew_human" place(commander) bone(commander) door(emit1) animation(commander) group(crew))
	("crew_human" place(gunner) bone(gunner) door(emit1) animation(gunner) group(crew))

	("crew_human" place(seat1) 	door(emit1) bone(seat01)	animation(passengers) 	group(passengers))
	("crew_human" place(seat2) 	door(emit1) bone(seat02)	animation(passengers)	group(passengers))
	("crew_human" place(seat3) 	door(emit1) bone(seat03)	animation(passengers)	group(passengers))
	("crew_human" place(seat4) 	door(emit1) bone(seat04)	animation(passengers)	group(passengers))
	("crew_human" place(seat5) 	door(emit1) bone(seat05)	animation(passengers)	group(passengers))
	("crew_human" place(seat6) 	door(emit1) bone(seat00)	animation(passengers)	group(passengers))

		
	("triple_engine")
	("wheel" args "wheelr")
	("wheel" args "wheell")
	("wheel" args "wheelback")
	{Chassis "airborne"
		("flight_model"
			speed(370)  ;//---------Max speed (at sea level), km/h.
			climb_speed(11) ;//-----Climb rate at sea level, in m/s
			turn(250) ;//-----------Turn-and-burn radius in meters, tightest sustained turn
			turnMP(33) ;//----------Turn-and-burn radius in meters, tightest sustained turn in Multiplayer
			aerodynamics(1.55) ;//--Aerodynamic efficiency rating (0-3)
			weight(5400) ;//--------Weight in kg.
			power(3700) ;//---------Horse Power.
			fuel(1300) ;//----------Fuel capacity in Liters.
			range(2100) ;//---------Distance can travel with full fuel tank, in km.
			roll_rate(40) ;//-------Roll rate, in degrees per second.
			roll_angle(65) ;//------Maximum roll angle, in degrees.
		)
	}

	{mass 5400}
	{extender "inventory"
		{Box
			{item "ammo air_bomb_ger_250kg" 2}
			{item  "ammo 7x56" 1410}
		}
	}
	{Weaponry
		{place "bomb"
			{weapon "bomb_dropper_ger_250x2" filled}
			{barrels 2}
			{shooter "shooter_b"}
			{charger "commander"}
			{gunner "commander"}
			{basic}
		}
		{place "mgun"
			{type "main"}
			{weapon "lewis_gun" filled}
			{gunner "gunner"}
			{charger "gunner"}
			{LinkBone "mgun_rot"}
		}
	}
	{Extension "ca101_b.mdl"}
	{Volume "inventory"
	}
}
