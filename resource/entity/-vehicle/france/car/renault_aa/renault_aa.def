{game_entity
	(include "/properties/car.ext")
	(include "/properties/selection/vehicle.inc" scale(1.1))
	{props "multi_board" "truck" "vision_lev02" "tractor" "tractor_heavy"}
	{able "emit_on_attack"}
	{extension "../../../generic/car/renault_agr_civ/renault_aa.mdl"}

	{collider "truck"}
	{patherId "blitz36"}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	("glass" args "window1")
	("glass" args "window2")
	("glass" args "window3")
	("glass" args "window4")
	("glass" args "window5")
	("glass" args "window6")
	("glass" args "window7")
	("glass" args "window8")
	("fuel" args "fuel")
	("transmission" args "transmission")

	("bodyback" repair(30))


	{volume "body1" {able {holed}}}
	{volume "bodyback1" {material "wood"} {tags "wood"} {able {holed}}}
	{volume "bodyback2" {material "wood"} {tags "wood"}}
	{volume "transmission" {able {NoWoundDecal 0}}}



	("wood" args "bodyback1")
	("wood" args "bodyback2")

	("crew_2_human")
	{boarder
		{anm "gunner"
			{forward	{begin	"board_LowTank_stand"} {end "pose_oerlikon_charger"}}
			{reverse 	{end	"emit_tank_1"}}
	    	}
		{anm "charger"
			{forward	{begin	"board_LowTank_stand"} {end "pose_flak30_loader"}}
			{reverse 	{end	"emit_tank_1"}}
 	   	}
	}
	("crew_human" place(gunner)	bone(gunner)	door(emit3) animation(gunner))


	("board_animation"
		place(driver)
		board_begin(board_big-midcar_driver)
		board_end(seat_driver_car)
		base(doorleft)
	)
	("board_animation"
		place(commander)
		board_begin(board_big-midcar)
		board_end(seat_passenger)
		base(doorright)
	)

	{boarder
		{anm "passenger"
			{forward {begin "board_body"} {end "seat_passenger"} {base "board"}}
			{reverse {end "emit_body" 1} {base "board"}}
		}
	}


	{extender "inventory"
		{box
			{clear}
			{item "ammo 13x96" 900}
		}
	}
	{Weaponry
		{place "gun"
			{weapon "hotchkiss_m1929_x2" filled}
			{foresight "foresight1"}
			{charger "gunner"}
			{Barrels 2}
		}
	}

	{mass 4320}
	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03d") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(59) ;----------------------------------Max speed.
			speedatmaxturn(15) ;-------------------------Max speed at max turn.
			reverse(22) ;--------------------------------Max speed in Reverse.
			weight(4.32) ;-------------------------------Weight in Tonnes.
			power(62) ;----------------------------------Horse Power.
			fuel(100) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(330) ;---------------------------------Range in Kilometers.
		)
	}
}
