{game_entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(0.9))
	{props "light" "vision_lev03" "muzzle_37mm_47mm" "detect_tank_light"}

	{collider "tank.light"}
	{targetclass "tank_light"}
	{targetSelector "tank_light"}

	("tank_light_tier1")
	
	("tracks" repair(30) thickness(15))
	
	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 25
			{front 38}
			{top 13}
			{bottom 13}
		}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 25
			{front 38}
			{top 13}
			{bottom 13}
		}
	}
	{volume "inventory1"
		{thickness 25}
	}
	{volume "inventory2"
		{thickness 25}
	}
	{volume "turret"		
		{thickness 25
			{front 38}
			{top 13}
			{bottom 13}
		}
		{HighHardness}
	}
	{volume "mantlet"
		{thickness 38}
	}
	{volume "engine"
		{thickness 25
			{front 10}
			{top 13}
			{bottom 13}
		}
	}
	("ammo" args "ammo1")
	("ammo" args "ammo2")	
	("crew_4_human")

	{boarder
		{anm "left"
			{forward	{begin	"board_tank_left"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_LowArmor"} 	{end "seat_armor"}}
			{reverse 	{end	"emit_tank_1"}}
		}
	}

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	
	{extender "inventory"
		{box
			{item "dynamite"}
			{item  "ammo 7x63" 4000}
			{item "bulletusa_37 ap" 46}
			{item "bulletusa_37 he" 70}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "37mm_m6" filling "bulletusa_37 ap" 1}
			("abm_dymamic"
				zeroing(2.0)
				dispersion(0.15)
			)
		}
		{place "mgun"
			{type "hull"}
			{weapon "browning_m19" filled}
			{foresight "foresight3"}
			{gunner "driver"}
			{charger "driver"}
			("abm_mgun")
			{basic}
		}
		{place "mgun1"
			{type "coaxial"}
			{weapon "browning_m19" filled}
			{foresight "foresight4"}
			{gunner "gunner"}
			{charger "gunner"}
			("abm_mgun")
			{basic}
		}
		{place "mgun3"
			{type "mgun_right"}
			{weapon "browning_m19" filled}
			{foresight "foresight6"}
			{gunner "charger"}
			{charger "charger"}
			("abm_mgun")
			{basic}
		}
		{place "mgun2"
			{type "mgun_left"}
			{weapon "browning_m19" filled}
			{foresight "foresight5"}
			{gunner "charger"}
			{charger "charger"}
			("abm_mgun")
			{basic}
		}
	}
	{mass 12700}
	{Chassis
		("tank_trace" fx("tracks_sm2") step(0.15) len(-0.45))
		("mobility_tank"
			speed(58) ;----------Max speed when fully accelerated on road, km/h.
			reverse(11) ;--------Max speed in reverse on road, km/h.
			traverse(32) ;-------Track traverse, per second, in degrees.
			weight(12.7) ;--------Weight in Tonnes.
			power(250) ;---------Engine Power, in hp.
			track(3.5) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(480) ;----------Fuel capacity in Litres.
			type(diesel) ;---------Fuel type. (diesel OR fuel)
			range(160) ;---------Range in km, off-road.
		)
	}

	{Extension "m3_stuart.mdl"}

	{bone "gun_rot"
		{speed2 10}
	}
	{bone "turret"
		{speed2 10}
	}

}
