			{item "ammo 7,5x54" 2400}
			{item "ammo bullet37_fra ap" 28}
			{item "ammo bullet37_fra he" 30}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "37mm_sa18" filling "ammo bullet37_fra ap" 1}
			{gunner "gunner"}
			{charger "gunner"}
			("abm_dymamic"
				zeroing(2.5)
				dispersion(0.25)
			)
		}
		{place "mgun1"
			{type "coaxial"}
			{weapon "reibel" filled}
			{foresight "foresight4"}
			{gunner "gunner"}
			{charger "gunner"}
			("abm_mgun")
			{basic}
		}
	}
	{mass 12000}
	{Chassis
		("tank_trace" fx("tracks_sm2") step(0.4) len(0.44))
		("mobility_tank"
			speed(25) ;----------Max speed when fully accelerated on road, km/h.
			reverse(7) ;--------Max speed in reverse on road, km/h.
			traverse(25) ;-------Track traverse, per second, in degrees.
			weight(12.0) ;--------Weight in Tonnes.
			power(91) ;----------Engine Power, in hp.
			track(7.0) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(180) ;----------Fuel capacity in Litres.
			type(diesel) ;---------Fuel type. (diesel OR fuel)
			range(320) ;----------Range in km, off-road.
		)
	}
	{Extension "fcm36.mdl"}
	{bone "gun_rot"
		{speed2 8}
	}
	{bone "turret"
