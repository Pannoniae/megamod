{game_entity
	(include "/properties/tank_unarmed.ext")
	(include "/properties/shadow/tank.inc" scale(1.3))
	(include "/properties/selection/vehicle.inc" scale(0.7))
	{props "armored_car" "-turret" "vision_lev02" "tractor" "tractor_medium" "t27"}
	{extension "ue_chenillette.mdl"}
	
	("armoredcar_tier1")

	("fuel" args "fuel")
	("transmission" args "transmission")
	("tracks" repair(30) thickness(15))
	{volume "body"
		{thickness 10
			{bottom 7}
		}
	}
	{volume "inventory"
		{thickness 5}
	}
	{volume "engine"
		{thickness 10
			{bottom 7}
		}
	}
	{targetclass "armoredcar"}
	{targetSelector "tank_bullet"}
	{patherId "t20"}
	{collider "tank.light"}

	{boarder
		{anm "left"
			{forward {begin "board_tank_left"} {base "open_gunner"}}
			{reverse {end "emit_tank_1_hold"}{base "open_gunner" -1}}
		}
		{anm "right"
			{forward {begin "board_tank_right"} {base "open_gunner"}}
			{reverse {end "emit_tank_1_hold"}{base "open_gunner" -1}}
		}
	}

	(define "crew_human"
		{placer
			{place "%place" {group "crew"} {visor "%visor"} {turnoff {sensor}}}
		}
		{boarder
			{door "emit1"}
			{door "emit2"}
			{link "emit1" "%place" {anm "left"} {forward putoff} {reverse puton}}
			{link "emit2" "%place" {anm "right"} {forward putoff} {reverse puton}}
		}
	)

	
	("crew_human" place(driver) visor(driver) animation(left))
	("crew_human" place(commander) visor(main)   animation(right))

	{extender "inventory"
		{box
		}
	}

	{mass 2640}
	{Chassis
		("tank_trace" fx("tracks_sm2") step(0.15) len(0.5))
		("mobility_tank"
			speed(30) ;----------Max speed when fully accelerated on road, km/h.
			reverse(6) ;--------Max speed in reverse on road, km/h.
			traverse(55) ;-------Track traverse, per second, in degrees.
			weight(2.64) ;--------Weight in Tonnes.
			power(38) ;----------Engine Power, in hp.
			track(4.0) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(120) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(100) ;---------Range in km, off-road.
		)
	}
}
