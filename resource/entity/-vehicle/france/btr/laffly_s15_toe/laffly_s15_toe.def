{game_entity
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.0))
	{props "tank" "turret" "wheeled" "with_gun" "vision_lev02"}
	{Extension "laffly_btr.mdl"}
	{extension "crew.ext"}
	(include "laffly_s15_toe.ext")
	{targetclass "armoredcar"}
	{targetSelector "tank_light"}

	{extender "inventory"
		{weapon "mgun" {mask "mountable"}}
		{weapon "mgun1" {mask "mountable"}}
		{box
			{size 8 8}
			{item "ammo 7,5x54" 700}
			{item "fm2429" filled {user "mgun"}}
			{item "fm2429_no_bipod" filled {user "mgun1"}}
		}
	}

	{Weaponry
		{place "mgun"
			{type "main"}
			{LinkBone "mgun"}
			{LinkAnimation "off"}
			{gunner "gunner"}
			{charger "gunner"}
			("abm_mgun")
			{basic}
		}
		{place "mgun1"
			{type "rear"}
			{LinkBone "mgun1"}
			{LinkAnimation "off"}
			{gunner "gunner2"}
			{charger "gunner2"}
			("abm_mgun")
			{basic}
		}
	}


	{mass 7000}
	{Chassis "wheel"
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(48) ;----------------------------------Max speed.
			speedatmaxturn(16) ;-------------------------Max speed at max turn.
			reverse(15) ;--------------------------------Max speed in Reverse.
			weight(7.0) ;--------------------------------Weight in Tonnes.
			power(50) ;----------------------------------Horse Power.
			fuel(180) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(130) ;---------------------------------Range in Kilometers.
		)
	}

	{bone "turret"
		{speed2 20}
	}
}