{game_entity
	(include "/properties/tank_assaultgun.ext")
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{props "td" "medium" "-turret" "mantlet" "vision_lev03" "muzzle_75mm_76mm_sides" "shield"}
	{Extension "stug4g.mdl"}
	(include  "stug4g.ext")
	{PatherId "panzer4"}
	{targetclass "tank_medium"}
	{targetSelector "tank_medium"}

	{extender "enumerator"
		{digit_folder "ger"}
	}
	
	(define "crew_driver2"
		{placer
			{place "driver" {group "crew"} {visor "driver"}}
		}
		{boarder
			{door "%door"}
			{link "%door" "driver" {anm "driver"} {forward putoff} {reverse puton}}
		}
	)

	(define "crew_4_human_extended1"
		("crew_inside")
		("crew_driver2" door(emit0))
		("crew_human" place(gunner)		door(emit1) door2(emit2) visor(main))
		("crew_human" place(charger)	door(emit1) door2(emit2) visor(none))
		("crew_human" place(commander)	door(emit1) door2(emit2) visor(around))
	)
	("crew_4_human_extended1")
	("charger_visible")

	{boarder
		{anm "driver"
			{forward	{begin	"board_pz4_driver"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"board_pz4_driver" -1.5}}
		}
		{anm "left"
			{forward	{begin	"board_tank_left"} {end "pose_mgun_pz6"}{base "open_c"}}
			{reverse 	{end	"emit_tank_1"}{base "open_c" -1}}
		}
		{anm "right"
			{forward	{begin	"board_tank_left"} {end "pose_mgun_pz6"}{base "open_l"}}
			{reverse 	{end	"emit_tank_2_hold"}{base "close_l"}}
		}
		{anm "armor"
			{forward	{begin	"board_MiddleArmor"} 	{end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_tank_1"}}
		}
		{anm "armor1"
			{forward	{begin	"board_MiddleArmor"} {end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_tank_1"}}
		}
		{anm "armor2"
			{forward	{begin	"board_lowArmor"} {end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_tank_1"}}
		}
	}

	
	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor2))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor1))
	
	{sensor
		{visor "main"
			{bone "visor2"}
		}
		{visor "around"
			{bone "visor1"}
		}
	}
	
	{extender "shield" {on}}
	
	{extender "smokescreen"
		{cooldown 5}
		{itemTags "grenade nbks"}
	}

	{extender "inventory"
		{weapon "mgun"
			{mask "mountable"}
		}
		{box
			{item "bulletger_75_l43 apcbche" 19}
			{item "bulletger_75_l43 he" 36}
			{item "bulletger_75_l43 apcr" 2}
			{item "bulletger_75_l43 heatc" 8}
			{item "ammo mgun_ger drum" 550}			; 12 drums (50 rounds each)
			{item "mg42_belt" filling "ammo mgun_ger belt" 50 {user "mgun"}}
			{item "ammo mgun_ger belt" 1950}		; 14 belts (150 rounds each)
			{item "geballteladung_3kg" 1}
			{item "nbks grenade" 5}
		}
	}
	
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "75mm_stuk40_l48" filling "bulletger_75_l43 apcbche" 1}
			{gunner "gunner"}
			{charger "commander"}
			("abm_dymamic_td"
				zeroing(2.5)
				dispersion(0.25)
			)
		}
		{place "mgun"
			{type "aa"}
			{gunner "charger"}
			{charger "charger"}
			{LinkBone "mgun_rot"}
			{LinkAnimation "off"}
			("abm_mgun")
			{rotate}
			{basic}
			{ai_in_manual}
		}
		{place "mgun2"
			{type "coaxial"}
			{weapon "mg34_tank" filled}
			{foresight "foresight4"}
			{gunner "commander"}
			{charger "commander"}
			("abm_mgun")
			{basic}
		}
	}


	{mass 23500}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.52) len(0.45))
		("mobility_tank"
			speed(38) ;----------Max speed when fully accelerated on road, km/h.
			reverse(8) ;---------Max speed in reverse on road, km/h.
			traverse(30) ;-------Track traverse, per second, in degrees.
			weight(23.0) ;-------Weight in Tonnes.
			power(300) ;---------Engine Power, in hp. //engine under normal use was rated 265hp at 2600 rpm
			track(5) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(470) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(130) ;---------Range in km, off-road.
		)
	}

	{bone "gun_rot_v"
		{limits -6 20}
		{speed2 6}
	}
	{bone "gun_rot"
		{limits -10 10}
		{speed2 8}
	}
}