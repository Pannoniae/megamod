{game_entity
	(include "/properties/tank.ext")
	
	(include "/properties/selection/vehicle.inc" scale(1.1))
	{props "td" "medium" "vision_lev05" "muzzle_85mm_93mm_sides" "shell_eject" "open_top" "detect_spg" "with_gun" "tractor" "tractor_medium"}
	{Extension "waffletractor.mdl"}
	(include "waffletractor.ext")
	{PatherId "panzer4"}
	{targetclass "tank_medium"}
	{targetSelector "tank_medium"}

	(define "crew_human"
		{placer	{place "%place" {group "crew"} {visor "%visor"}}}
		{boarder {door "%door"}	{link "%door" "%place" {anm "%place"} {forward putoff} {reverse puton}}}
	)

	{boarder
		{anm "driver"
			{forward	{begin	"board_cromwell"} {end "pose_mgun_pz6"} {base "open_driver" 1}}
			{reverse 	{end	"board_cromwell" -1}  {base "open_driver" -1}}
		}
		{anm "charger"
			{forward	{begin	"board_lowarmor"} {end "aagun_72k_gunner"}}
			{reverse 	{end	"board_lowarmor" -1}}
		}
		{anm "gunner"
			{forward	{begin	"board_lowarmor"} {end "pose_seat_m20"}}
			{reverse 	{end	"board_lowarmor" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_cromwell"} {end "pose_mgun_pz6"}  {base "open_commander" 1}}
			{reverse 	{end	"board_cromwell" -1} {base "open_commander" -1}}
		}
	}


	("crew_human" 	      place(driver)	door(emit2) visor(driver))
	("crew_human" 	      place(commander)	door(emit1) visor(driver))
	("crew_human_visible_anm"	place(charger) 	 door(emit1) door2(emit1) visor(around) anm_left(charger) anm_right(charger))
	("crew_human_visible_anm"	place(gunner) 	 door(emit2) door2(emit2) visor(main)   anm_left(gunner)   anm_right(gunner))

{placer
	{place "gunner" {visor "main"}}
}

("crew_human" place(gunner)		door(emit1) bone(gunner)	animation(gunner)		group(crew))
("crew_human" place(charger)	door(emit1) bone(charger)	animation(charger)		group(crew))


	{extender "inventory"
		{weapon "mgun" {mask "mountable"}}
		{box
			{item "bulletger_88_l71 apcbche" 18}
			{item "bulletger_88_l71 he" 12}
			{item "bulletger_88_l71 apcr" 4}
			{item "geballteladung_3kg" 1}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "88mm_pak43_3" filling "bulletger_88_l71 apcbche" 1}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic_td"
				zeroing(2.5)
				dispersion(0.25)
			)
		}
	}

	{mass 16300}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.52) len(0.85))
		("mobility_tank"
			speed(35) ;----------Max speed when fully accelerated on road, km/h.
			reverse(12) ;---------Max speed in reverse on road, km/h.
			traverse(19) ;-------Track traverse, per second, in degrees.
			weight(16.3) ;-------Weight in Tonnes.
			power(140) ;---------Engine Power, in hp.
			track(4) ;-----------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(310) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(195) ;----------Range in km, off-road.
		)
	}
	{bone "gun_rot"
		{limits -2 15}
		{speed2 6}
	}
	{bone "turret"
		{speed2 6}
	}
}