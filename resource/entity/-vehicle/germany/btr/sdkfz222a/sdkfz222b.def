{game_entity
	(include "/properties/armoredcar.ext")
	
	(include "/properties/selection/vehicle.inc" scale(0.9))
	{props "tank" "turret" "wheeled" "-hatch" "with_gun" "vision_lev02" "muzzle_20mm_25mm_auto" "smoke" "smk_ger"}
	{extension "sdkfz222b.mdl"}
	{extension "crew.ext"}
	{patherId "sdkfz222"}
	(include "sdkfz222b.ext")
	{targetclass "armoredcar"}
	{targetSelector "tank_zenite"}

	("shield_cover")

	{sensor
		{visor "main"
			{vision "recon_main"}
		}
		{visor "around"
			{vision "vehicle_around"}		;// better vision than a in-closed turret 
		}
	}
	{extender "smokescreen"
		{cooldown 6}
		{itemTags "grenade m24_smoke"}
	}
	{extender "shield" {off}}
	{extender "detail" {random 0} {detail1 1} {detail2 1} {detail5 1} {detail6 1}}
	{texmod "camo"}

	{extender "inventory"
		{box
			{item "bulletger_20_auto ap" 50}		; 18 magazines (10 rounds each)
			{item "bulletger_20_auto apcr" 40}
			{item "bulletger_20_auto he" 90}
			{item "ammo mgun_ger belt ap2" 2250}		; 16 belts (150 rounds each)
			{item "geballteladung_3kg" 1}
			{item "m24_smoke grenade" 4}
			{item "mg42_tank" filling "ammo mgun_ger belt ap" 150 {user "mgun"}}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "20mm_kwk38" filling "bulletger_20_auto ap" 10}
			{gunner "gunner"}
			{charger "gunner"}
			("abm_dymamic_autocannon"
				zeroing(2)
				dispersion(0.10)
			)
		}
		{place "mgun"
			{type "coaxial"}
			{gunner "gunner"}
			{charger "commander"}
			{LinkBone "mgun"}
			{LinkAnimation "off"}
			("abm_mgun")
			{basic}
		}
	}

	{mass 5000}
	{Chassis "wheel"
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(70) ;----------------------------------Max speed.
			speedatmaxturn(26) ;-------------------------Max speed at max turn.
			reverse(26) ;--------------------------------Max speed in Reverse.
			weight(4.8) ;--------------------------------Weight in Tonnes.
			power(75) ;----------------------------------Horse Power.
			fuel(110) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(180) ;---------------------------------Range in Kilometers.
		)
	}

	{bone "gun_rot"
		{limits -7 85}		;// AA mode limits
		;{limits -7 5}		;// hatch closed limits
		{speed2 30}
	}
	{bone "turret"
		{speed2 25}
	}
}