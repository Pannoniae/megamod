{game_entity	
	(include "/properties/tank.ext")
	(include "/properties/selection/vehicle.inc"  scale(1.2))
	(include "/properties/shadow/tank.inc"  scale(1.3))
	{props "heavy" "vision_lev05" "muzzle_85mm_93mm_sides" "turret_rotator" "detect_tank_heavy"}
	{targetclass "tank_heavy"}
	{targetSelector "tank_heavy"}
	{collider "tank.heavy"}
	(include "tiger1p.ext")
	
	("crew_5_human_extended")
	{sensor
		{visor "back"
			{bone "mgun3"}
		}
	}
	{extender "enumerator"
		{digit_folder "ger"}
	}

	
	{boarder
		{anm "driver"
			{forward	{begin	"board_Is-2"}{end "seat_gunner_stand"} {base "open_driver"}}
			{reverse 	{end	"emit_tank_2_hold"} {base "open_driver" -1}}
		}
		{anm "left"
			{forward	{begin	"board_Is-2"} {end "seat_gunner_stand"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_Is-2"} {end "pose_watch_binocular"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_Is-2"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_Is-2"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_body"}}
		}
	}

	("seat_human" place(seat4) bone(seat04) door(emit5)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit6)  animation(armor))
	("seat_human" place(seat1) bone(seat01) door(emit4)  animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit3)  animation(armor1))


	{extender "inventory"
		{box
			{item "bulletger_88_l56 apcbche" 40} 	; 80 rounds
			{item "bulletger_88_l56 he" 30}
			{item "bulletger_88_l56 apcr" 3}
			{item "bulletger_88_l56 heat" 10}
			{item "ammo mgun_ger belt" 4500}		; 32 belts (150 rounds each)
			{item "geballteladung_3kg" 1}
		}
	}
	
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "88mm_kwk36" filling "ammo bulletger_88_l56 apcbche" 1}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic"
				zeroing(3.0)
				dispersion(0.20)
			)
		}
		{place "mgun1"
			{type "hull"}
			{weapon "mg34_tank" filled}
			{foresight "foresight4"}
			{gunner "gunner3"}
			{charger "gunner3"}
			{ai_in_manual}
			{basic}
		}
		{place "mgun2"
			{type "coaxial"}
			{weapon "mg34_tank" filled}
			{foresight "foresight5"}
			{gunner "gunner"}
			{charger "charger"}
			{basic}
		}
	}


	{mass 57000}
	{Chassis
		("tank_trace" fx("tracks_big") step(0.20) len(0.5))
		("mobility_tank"
			speed(32) ;----------Max speed when fully accelerated on road, km/h.
			reverse(29) ;--------Max speed in reverse on road, km/h.
			traverse(18) ;-------Track traverse, per second, in degrees.
			weight(57.0) ;-------Weight in Tonnes.
			power(530) ;---------Engine Power, in hp.
			track(3.5) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(950) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(100) ;----------Range in km, off-road.
		)
	}

	
	{Extension "tiger1p.mdl"}
	{texmod ""}
	{bone "turret"
		("turret_heavy" power_traverse(20))
	}
	{bone "gun_rot"
		{limits -16 9}
		{speed 0.0015}
	}
}