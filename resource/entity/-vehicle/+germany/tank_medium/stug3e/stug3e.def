{game_entity
	(include "/properties/tank_assaultgun.ext")
	(include "/properties/selection/vehicle.inc" scale(1.1))
	{props "td" "medium" "-turret" "mantlet" "vision_lev03" "muzzle_50mm_57mm" "smoke" "nkav"}
	{extension "stug3f.mdl"}
	(include "stug3f.ext")
	{PatherId "panzer3"}
	{targetclass "tank_medium"}
	{targetSelector "tank_medium"}

	{extender "enumerator"
		{digit_folder "ger"}
	}

	{sensor
		{visor "main"
			{bone "visor1"}
		}
		{visor "around"
			{bone "visor"}
		}
	}

	("crew_4_human")

	{boarder
		{anm "left"
			{forward	{begin	"board_tank_left"} {end "seat_armor"}}
			{reverse 	{end	"emit_tank_1"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"} {end "seat_armor"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_MiddleArmor"} {end "seat_willis_passenger"}}
			{reverse 	{end	"emit_tank_1"}}
		}
		{anm "armor1"
			{forward	{begin	"board_MiddleArmor"} {end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_tank_1"}}
		}
		{anm "armor2"
			{forward	{begin	"board_MiddleArmor"} {end "seat_crew_cannon1"}}
			{reverse 	{end	"emit_tank_1"}}
		}
	}

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor2))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor1))

	{extender "smokescreen"
		{cooldown 5}
		{itemTags "grenade nbks"}
	}

	{extender "inventory"
		{box
			{item "bulletger_75_l24 apcbche" 9}		; 44 rounds
			{item "bulletger_75_l24 he" 22}
			{item "bulletger_75_l24 heata" 8}
			{item "bulletger_75_l24 sm" 4}
			{item "geballteladung_3kg" 1}
			{item "nbks grenade" 5}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "75mm_kwk37" filling "bulletger_75_l24 heata" 1}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic_td"
				zeroing(3.5)
				dispersion(0.25)
			)
		}
	}

	{mass 21600}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.52) len(0.6))
		("mobility_tank"
			speed(40) ;----------Max speed when fully accelerated on road, km/h.
			reverse(8) ;---------Max speed in reverse on road, km/h.
			traverse(30) ;-------Track traverse, per second, in degrees.
			weight(21.6) ;-------Weight in Tonnes.
			power(265) ;---------Engine Power, in hp. //engine under normal use was rated 265hp at 2600 rpm
			track(5) ;-----------Track performance: (0,10], 10=ideal. 
			fuel(310) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(85) ;----------Range in km, off-road.
		)
	}

	{bone "gun_rot"
		{limits -6 20}
		{speed2 6}
	}
	{bone "turret"
		{limits -10 10}
		{speed2 8}
	}
}