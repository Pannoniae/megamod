{game_entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc"  scale(1.3))
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{props "medium" "vision_lev04" "muzzle_50mm_57mm"}
	{Extension "type2_ho_i_kou.mdl"}
	(include "type2_ho-i_kou.ext")
	{PatherId "panzer4"}
	{targetclass "tank_medium"}
	{targetSelector "tank_light"}

	{extender "enumerator"
		{digit_folder "jap"}
	}


	{boarder
		{anm "left"
			{forward	{begin	"board_sherman_left"} {end "seat_m7_mgunner"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_sherman_right"} {end "seat_m7_mgunner"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_HighArmor"} 	{end "seat_armor"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_HighArmor"} {end "seat_armor"}}
			{reverse 	{end	"emit_body"}}
		}
	}
	
	("crew_5_human")
	{sensor
		{visor "back"
			{vision "tank_back"}
			{bone "foresight5"}
		}
		{visor "driver"
			{vision "tank_driver"}
			{bone "visor2"}
		}
		{visor "main"
			{vision "tank_main-m"}
			{bone "gun_rot"}
		}
		{visor "hullmg"
			{bone "foresight4"}
			{vision "tank_driver"}
		}
	}
	{placer
		{place "gunner3" {visor "hullmg"}}
	}
	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor1))
	{extender "inventory"
		{box
			{item "dynamite"}
			{item "ammo bullet57_jap aphe" 50}
			{item "ammo bullet57_jap he" 20}
			{item "ammo bullet57_jap heat" 15}
			{item "ammo 7x58" 1250}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{weapon "57mm_type3_shin" filling "ammo bullet57_jap aphe" 1}
			{RestoreIKAfterAim}
			("abm_dymamic"
				zeroing(2.8)
				dispersion(0.20)
			)
		}
		{place "mgun1"
			{type "hull"}
			{weapon "type97tmg" filled}
			{foresight "foresight4"}
			{gunner "gunner3"}
			{charger "gunner3"}
			("abm_mgun")
			{basic}
		}
	}

	{mass 16100}
	{Chassis
		("tank_trace" fx("tracks_sm") step(0.3) len(0.35))
		("mobility_tank"	
			speed(44)  ;---------Max speed when fully accelerated on road, km/h.
			reverse(9);----------Max speed in reverse on road, km/h.
			traverse(36) ;-------Track traverse, per second, in degrees.
			weight(16.1) ;-------Weight in Tonnes.
			power(240) ;---------Engine Power, in hp. //engine under normal use was rated 265hp at 2600 rpm
			track(5) ;-----------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(310) ;----------Fuel capacity in Litres.
			type(diesel) ;---------Fuel type. (diesel OR fuel)
			range(200) ;----------Range in km, off-road.
		)
	}
	
	{bone "gun_rot"
		{speed2 7}
		{limits -10 15}
	}
	{bone "turret"
		{speed2 7}
	}
}
