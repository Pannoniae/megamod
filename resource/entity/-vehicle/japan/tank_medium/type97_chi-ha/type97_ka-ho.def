{game_entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc"  scale(1.3))
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{props "medium" "vision_lev04" "flame" "muzzle_50mm_57mm"}
	{extension "type97_chi_ha.mdl"}
	(include "type97_chi-ha.ext")
	{PatherId "panzer3"}
	{targetclass "tank_medium"}
	{targetSelector "tank_light"}

	{extender "enumerator"
		{digit_folder "jap"}
	}

	("crew_4_human")

	{placer 
		{place "commander" {visor "back"}}
	}
	{boarder
		{anm "left"
			{forward	{begin	"board_Kv"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
			{anm "armor"
			{forward	{begin	"board_MiddleArmor"} {end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_MiddleArmor"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_body"}}
		}
	}
	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit3)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit4)  animation(armor1))
	("seat_human" place(seat4) bone(seat04) door(emit4)  animation(armor))

	{extender "inventory"
		{box
			{item "dynamite"}
			{item "ammo flame_thrower" 200}
			{item "ammo bullet57_jap aphe" 55}
			{item "ammo bullet57_jap he" 35}
			{item "ammo bullet57_jap heat" 15}
			{item "ammo 7x58" 1500}
		}
	}
		
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "57mm_type97" filling "ammo bullet57_jap aphe" 1}
			("abm_dymamic"
				zeroing(2.8)
				dispersion(0.20)
			)
		}
		{place "flamer1"
			{type "hull"}
			{weapon "flame_thrower_g" filled}     
			{gunner "charger"}
			{charger "charger"}
			{foresight "foresight4"}
			("abm_mgun")
            		{basic}
		}
		{place "mgun2"
			{type "rear"}
			{weapon "type97tmg" filled}
			{gunner "commander"}
			{charger "commander"}
			{foresight "foresight5"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
	}
	{sensor
		{visor "back"
			{vision "tank_back"}
			{bone "foresight5"}
		}
	}

	{mass 14300}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.56) len(0.45))
		("mobility_tank"	
			speed(38)  ;---------Max speed when fully accelerated on road, km/h.
			reverse(7.5);----------Max speed in reverse on road, km/h.
			traverse(36) ;-------Track traverse, per second, in degrees.
			weight(14.3) ;-------Weight in Tonnes.
			power(170) ;---------Engine Power, in hp. //engine under normal use was rated 265hp at 2600 rpm
			track(5) ;-----------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(310) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(210) ;----------Range in km, off-road.
		)
	}
	
	{bone "gun_rot"
		{speed2 8}
		{limits -8 25}
	}
	{bone "turret"
		{speed2 8}
	}
}
