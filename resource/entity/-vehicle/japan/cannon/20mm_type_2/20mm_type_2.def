{game_entity
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc" scale(0.6))
	{Extension "type2_20mm.mdl"}
	(include "/properties/selection/cannon.inc" scale(0.7))
	{props "cannon_small" "automatic" "wheeled" "vision_lev02_can" "muzzle_20mm_25mm_auto" "cannon_sandbag_small" "trailer" "trailer_light" "detect_cannon_aa"}
	{collider "cannon_small"}
	{targetclass "cannon_zenite"}
	{targetSelector "cannon_zenite"}

	("wheel" args "wheelright")
	("wheel" args "wheelleft")

	("gun" repair(30) thickness(15))
	("armor_light_cannon")
	
	("crew_wheeled_cannon")

	{boarder
		{anm "gunner"
			{forward {end "pose_oerlikon_charger" 10}}
		}
		{anm "commander"
			{forward {end "cannon_small_commander" 10}}
		}
		{anm "driver1"	;// gunner
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"	;// charger
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "seat1"	;// gunner
			{forward {end "pose_oerlikon_charger" 10}}
		}
		{anm "seat2"	;// charger
			{forward {end "pose_seat_cannon_right" 10}}
		}
	}

	{extender "cannon"
		{animation
			{switch "close"}
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right"}
			{aim "" ""}
			{reload "cannon_oerlikon_charger" ""}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
		{rotate_ik_Limit 0}
	}
	
	{extender "inventory"
		{box
			{item "bullet20_jap ap" 200}
			{item "bullet20_jap he" 200}	
			{item "sandbag_vehicle" 1}
		}
	}
	
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "20mm_type2" filled}
			("abm_dymamic_aa"
				zeroing(1.2)
				dispersion(0.15)
			)
		}
	}   	
	{mass 800}
	
	{Chassis "track"
		("car_trace" fx("tracewheel02a") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility_cannon"
			speed(8.2) ;--------------------------------Max speed.
			weight(800) ;-------------------------------Weight in Kilograms.
		)
	}
	{bone "gun_rot"
	      {limits -20 40}
	}
	{bone "basis"
	      {limits}
	}
}
