{game_entity
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc" scale(0.6))
	{Extension "20mm_type_98.mdl"}
	(include "/properties/selection/cannon.inc" scale(0.7))
	{props "cannon_small" "wheeled" "automatic" "vision_lev02_can" "muzzle_20mm_25mm_auto" "cannon_sandbag_small" "trailer" "trailer_light" "detect_cannon_aa"}
	{collider "cannon_small"}
	{targetclass "cannon_small"}
	{targetSelector "cannon_small"}

	("wheel" args "wheelright")
	("wheel" args "wheelleft")

	("gun" repair(30) thickness(20))

	("armor_light_cannon")
	("crew_wheeled_cannon")

	{boarder
		{anm "gunner"
			{forward {end "pose_flak30_gunner" 10}}
		}
		{anm "commander"
			{forward {end "pose_flak30_loader" 10}}
		}
		{anm "driver1"
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"
			{forward {end "mgun_browning_driver_r" 10}}
		}
		{anm "seat1"
			{forward {end "pose_flak30_seatr" 10}}
		}
		{anm "seat2"
			{forward {end "pose_flak30_seatr" 10}}
		}
	}
	{extender "cannon"
		{animation
			{switch "close"}
			{move "cannon_pak40_pusher_left" "mgun_browning_driver_r"}
			{aim "flak30_gunner" ""}
			{reload "" "flak30_loader"}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
	}
	{extender "inventory"
		{box
			{item "bullet20_jap ap" 200}
			{item "bullet20_jap he" 200}	
			{item "sandbag_vehicle" 1}
		}
	}
	
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "20mm_type98" filled}
			("abm_dymamic_aa"
				zeroing(1.2)
				dispersion(0.15)
			)
		}
	}   	
	{mass 370}
	{Chassis "track"
		("car_trace" fx("tracewheel05a") step(0.14) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility_cannon"
			speed(10.2) ;----------------------------------Max speed.
			weight(370) ;---------------------------------Weight in Kilograms.
		)
	}
	{bone "basis"
		 {limits}
		{speed2 9}
	}
	{bone "gun_rot"
		{limits -5 50}
		{speed2 10}
	}
	{bone "turret"
		{speed2 18}
		{limits -45 45}
	}
}



