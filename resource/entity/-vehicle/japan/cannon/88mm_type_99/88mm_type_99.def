{game_entity
	(include "/properties/cannon.ext")
	{Extension "88mm_type_99.mdl"}
	(include "/properties/selection/vehicle.inc" scale(1.1))
	{props "wheeled" "invisible" "vision_lev04_can" "muzzle_85mm_93mm" "trailer" "trailer_heavy" "detect_atgun" "c_aa_hvy"}
	{PatherID "cannon.large"}
	{targetclass "cannon_big"}
	{targetSelector "cannon_aa"}

	{sensor
		{visor "main"
			{vision "cannon_range_210"}
		}
	}

	("wheel" args "wheelright1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft1")
	("wheel" args "wheelleft2")

	("gun" repair(30) thickness(30))
	("shield" args "shield" 8)

	("armor_medium_cannon")
	("crew_wheeled_cannon_4")

	{boarder
		{anm "gunner"
			{forward {end "pose_new_cannon_gunner_fire" 10}}
		}
		{anm "charger"
			{forward {end "pose_new_cannon_charger_fire" 10}}
		}
		{anm "charger2"
			{forward {end "pose_new_cannon_charger2_fire" 10}}
		}
		{anm "commander"
			{forward {end "pose_new_cannon_commander_fire" 10}}
		}
		{anm "driver1"	;// gunner
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"	;// charger
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "driver3"	;// charger2
			{forward {end "mortar_driver_l" 10}}
		}
		{anm "driver4"	;// commander
			{forward {end "mgun_browning_driver_r" 10}}
		}
		{anm "seat1"	;// gunner
			{forward {end "pose_seat_cannon_left" 10}}
		}
		{anm "seat2"	;// charger
			{forward {end "pose_seat_cannon_right" 10}}
		}
		{anm "seat3"	;// charger2
			{forward {end "pose_seat_cannon_right" 10}}
		}
		{anm "seat4"	;// commander
			{forward {end "pose_seat_cannon_left" 10}}
		}
	}

	{extender "cannon"
		{animation
			{switch "close"}
			;// "gunner" "charger" "charger2" "commander"
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right" "mortar_driver_l" "mgun_browning_driver_r" }
			{aim "" "" "" ""}
			{fire "" "" "new_cannon_charger2_fire" "new_cannon_commander_fire"}
			{reload "" "" "new_cannon_charger2_reload" "new_cannon_commander_reload"}
		}
		{move {workers "driver1" "driver2" "driver3" "driver4" minWorkers 2} {obstacle "close"}}			;// move state: cannon being pushed and which positions play animations
		{attack {workers "gunner" "charger" "charger2" "commander"} {obstacle "open"}}		;// fire/attack state: cannon aim, fire, and reload events
		{trailing {workers "seat1" "seat2" "seat3" "seat4"}}				;// trailing state: cannon is being towed {obstacle} not needed. Uses "close"
	}

	{extender "inventory"
		{box
			{item "bullet88_jap aphe" 29}		; 55 rounds
			{item "bullet88_jap he" 25}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "88mm_type99" filling "bullet88_jap aphe" 1}
			("abm_dymamic_aa"
				zeroing(2.25)
				dispersion(0.50)
			)
		}
	}

	{mass 7400}
	{Chassis "track"
		("car_trace" fx("tracewheel02") step(0.1) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel02") step(0.1) wheell("wlf") wheelr("wrf") bonel("FXtraceL2") boner("FXtraceR2"))
		("car_trace" fx("tracewheel02") step(0.1) wheell("wlf") wheelr("wrf") bonel("FXtraceL3") boner("FXtraceR3"))
		("mobility_cannon"
			speed(4.6) ;-----------------------------------Max speed.
			weight(7400) ;---------------------------------Weight in Kilograms.
		)
	}
	{bone "gun_rot"
		{limits -10 80}
		{speed2 15}
	}
	{bone "turret"
		{speed2 20}
	}
}
