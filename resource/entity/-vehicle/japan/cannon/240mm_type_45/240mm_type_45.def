{game_entity
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc" scale(0.5))
	{Extension "type45_240mm.mdl"}
	(include "/properties/selection/cannon.inc"  scale(1.2))
	{props "vision_lev05_can" "muzzle_122mm_128mm" "detect_artillery"}
	{PatherId "cannon.large"}
	{targetclass "howitzer"}
	{targetSelector "cannon_howitzer"}

	("gun" repair(30) thickness(30))
	("shield" args "shieldl1" 10)
	("shield" args "shieldr1" 10)

	("armor_heavy_cannon")
	("crew_carried_ammo")
	{boarder
		{anm "gunner"
			{forward	{end "pose_m5_gunlayer" 10}}
		}
		{anm "commander"
			{forward	{end "pose_m5_charger" 10}}
		}
	}

	{extender "inventory"
		{box
			{clear}
			{size 4 2}
			{item "ammo bullet240 he" 12}
		}
	}
	{Weaponry	
		{place "gun"
			{weapon "240mm_type45" filling "ammo bullet240 he" 1}
			{foresight "foresight1"}
			{charger "commander"}
			{Rotate}
		}
	}
	{mass 38000}
	
	
	{extender "cannon"
		{animation
			{switch "close"}
			{move "" ""}
			{aim "cannon_zis3_gunlayer" ""}
			{fire  "Cannon_gunlayer_fire-alert" "cannon_zis3_charger_fire 0.1"}
			{reload  "" "Cannon_zis3_charger"}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
	}
	{Chassis "track"
		("car_trace" fx("tracewheel03") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility_cannon"
			speed(0.001) ;-----------------------------------Max speed.
			weight(38000) ;---------------------------------Weight in Kilograms.
		)
	}
}