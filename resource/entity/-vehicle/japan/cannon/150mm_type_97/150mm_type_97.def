{game_entity
	(include "/properties/cannon_mgun.ext")
	(include "/properties/shadow/tank.inc" scale(0.6))
	{Extension "type_97_150mm.mdl"}
	(include "/properties/selection/cannon.inc" scale(0.6))
	{props "-mg_stan" "wheeled" "invisible" "with_gun" "mortar" "vision_lev01_can" "trailer" "trailer_light" "detect_artillery_small"}
	(mod not "mp" {able "emit_on_attack"})
	{targetclass "howitzer"}
	{targetSelector "cannon_howitzer"}

	
	("crew_wheeled_cannon")

	{volume "wheelleft" {tags "invisible"}}
	{volume "wheelright" {tags "invisible"}}

	{sensor
		{visor "main"
			{vision "cannon_mortar"}
			{bone "visor"}
		}
	}

	{boarder
		{anm "gunner"
			{forward {end "pose_m42_gunlayer" 10}}
		}
		{anm "commander"
			{forward {end "pose_m42_charger" 10}}
		}
		{anm "driver1"	;// gunner
			{forward {end "mortar_driver_r" 10}}
		}
		{anm "driver2"	;// charger
			{forward {end "mortar_driver_l" 10}}
		}
		{anm "seat1"	;// gunner
			{forward {end "pose_seat_cannon_left" 10}}
		}
		{anm "seat2"	;// charger
			{forward {end "pose_seat_cannon_right" 10}}
		}
	}

	{extender "cannon"
		{animation
			{switch "close"}
			;// "gunner" "commander"
			{move "mortar_driver_r" "mortar_driver_l"}
			{aim "mortar_120sgrw42_commander_aim" "mortar_120sgrw42_gunner_aim" }
			{fire "mortar_120sgrw42_commander_fire" "mortar_120sgrw42_gunner_fire"}
			{reload "mortar_120sgrw42_commander_reload" ""}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
	}

	{extender "inventory"
		{box
			{item "ammo mortar150" 15}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{weapon "weapon mortar150" filling "ammo mortar150" 1}
			{RestoreIKAfterAim}
			{gunner "gunner"}
			{charger "gunner"}
			{basic}
			("abm_dymamic_mortar"
				zeroing(3.0)	; // time it takes to aim until the reticle shrinks. Bigger values, more control.
				dispersion(1)   ; // time it takes to distort the reticle when you move the gun (how abrupt it loses zeroing). Bigger values, more control.
			)
		}
	}

	{mass 150}
	{Chassis "track"
		("car_trace" fx("tracewheel05") step(0.07) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility_cannon"
			speed(9) ;-----------------------------------Max speed.
			weight(150) ;--------------------------------Weight in Kilograms.
		)
	}
}