		{thickness 6
			{front	8}
		}
	}
	{volume "body4"
		{tags "body"}
		{component "body"}
		{thickness 6
			{front	8}
		}
	}
	{volume "body5"
		{tags "body"}
		{component "body"}
		{thickness 6
			{front	8}
		}
	}
	{volume "body6"
		{tags "body"}
