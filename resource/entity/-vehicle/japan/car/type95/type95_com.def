{game_entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(0.9))
	(include "/properties/selection/vehicle.inc" scale(0.8))
	{props "vision_lev01"}
	{extension "type95com.mdl"}
	{able "emit_on_attack"}
	{PatherId "kubel"}
	{targetSelector "car_bullet"}
	{targetclass "car_bullet"}

	{Volume "body"
		{thickness 3}
	}
	{Volume "engine"
		{thickness 3}
	}
	("wheel" args "wheelleft1")
	("wheel" args "wheelleft2")
	("wheel" args "wheelright1")
	("wheel" args "wheelright2")
	("glass" args "glass_1")
	("glass" args "glass_2")


	("crew_2_human")
	("crew_human_2" place(seat1) bone(seat01) door(emit3) door2(emit4))

	("board_animation"
		place(driver)
		board_begin(board_ba-20m)
		board_end(seat_driver_car)
		base(doorright)
	)
	("board_animation"
		place(commander)
		board_begin(board_ba-20m_driver)
		board_end(seat_passenger)
		base(doorleft)
	)	
	("board_animation"
		place(seat1)
		board_begin(board_LowTank_left)
		board_end(seat_passenger)
	)

	{placer
		{place "driver"		{visor "main"}}
		{place "commander"	{visor "around"} {group "crew"}}
		{place "seat1"	{visor "main"} {turnoff {targetable 0}}}
	}

	{sensor
		{visor "main"
			{vision "human"}
		}
	}

	{mass 1200}
	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(70) ;----------------------------------Max speed.
			speedatmaxturn(12) ;-------------------------Max speed at max turn.
			reverse(14) ;--------------------------------Max speed in Reverse.
			weight(1.2) ;------------------------------Weight in Tonnes.
			power(33) ;----------------------------------Horse Power.
			fuel(60) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(300) ;---------------------------------Range in Kilometers.
		)
	}
}