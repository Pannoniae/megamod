{game_entity
	(include "/properties/moto.ext")
	(include "/properties/shadow/tank.inc" scale(0.9))
	(include "/properties/selection/vehicle.inc" scale(0.6))
	{props "vision_lev01"}
	{Extension "type97_sidecar.mdl"}
	{able "emit_on_attack"}
	{PatherId "moto"}
	{targetSelector "car_bullet"}

	("wheel" args "wheel1")
	("wheel" args "wheel2")
	("wheel" args "wheel3")
	("fuel" args "fuel")


	("crew_inside")
	("crew_human" place(driver) bone(driver) door(emit1) animation(driver) group(crew))
	("crew_human" place(gunner) bone(gunner) door(emit2) animation(gunner) group(crew))
	("crew_human" place(seat1) bone(seat1) door(emit1) animation(passenger) group(passenger))

	{boarder
		{anm "driver"
			{forward	{begin	""} {end "pose_moto_driver"} {base "doorleft1"}}
			{reverse	{end	"" -1} {base "doorleft1" -1}}
		}
		{anm "gunner"
			{forward	{begin	""} {end "pose_moto_sidecar"}}
			{reverse	{end	"" -1}}
		}
		{anm "passenger"
			{forward	{begin	""} {end "pose_moto_passenger"}}
			{reverse	{end	"" -1}}
		}
	}

	{placer
		{place "driver"		{visor "none"} {turnoff {sensor 0}{targetable 0}}}
		{place "gunner"		{visor "none"} {turnoff {sensor 0}{targetable 0}}}
		{place "seat1"		{visor "none"} {turnoff {sensor 0}{targetable 0}}}
	}

	{extender "inventory"
		{weapon "mgun" {mask "mountable"}}
		{Box
			{size 8 8}
			{item  "ammo 7x58" 1200}
			{item "type99lmg" filled {user "mgun"}}
		}
	}
	{Weaponry
		{place "mgun"
			{type "main"}
			{charger "gunner"}
			{LinkBone "mgun"}
			{LinkAnimation "off"}
			("abm_mgun")
		}
	}
	{mass 397} ;//187 + 210 for side car
	{Chassis
		("car_trace" fx("tracewheel03a") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03a") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("car_trace" fx("tracewheel03a") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL3") boner("FXtraceR3"))
		("mobility_car"
			speed(95) ;----------------------------------Max speed.
			speedatmaxturn(20) ;-------------------------Max speed at max turn.
			reverse(25) ;--------------------------------Max speed in Reverse.
			weight(0.397) ;------------------------------Weight in Tonnes.
			power(22) ;----------------------------------Horse Power.
			fuel(14) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(310) ;---------------------------------Range in Kilometers.
		)
	}
}