{game_entity
	(include "/properties/tank.ext")
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{props "td" "light" "vision_lev03" "muzzle_85mm_93mm_sides" "shell_eject" "open_top" "detect_tank_light" "tractor" "tractor_light" "muzzle_hmg_m2hb"}
	{targetclass "tank_light"}
	{targetSelector "tank_medium"}
	{patherId "m18_gmc"}
	{collider "tank.light"}
	(include "m18_gmc_90.ext")
	{Extension "m18_gmc_90.mdl"}
	
  	{extender "shield"
			{on}
	}	

;==============================================
	(define "crew_human_visible"
		{placer	{place "%place" {group "crew"} {linkbone "%place"} {visor "%visor"} {turnoff {sensor} {shadow} {targetable}}}  	}
		{boarder {door "%door"}	{link "%door" "%place" {anm "%place"} {forward putoff} {reverse puton}}}
	)

	{boarder
		{anm "driver"
			{forward	{begin	"board_tank_left"} {end "seat_driver_car"} {base "open_driver"}}
			{reverse 	{end	"emit_tank_1_hold"} {base "open_driver" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_tank_right"} {end "pose_M36_commander"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "gunner"
			{forward	{begin	"board_HighArmor"} {end "pose_M36_gunner"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "charger"
			{forward	{begin	"board_HighArmor"} {end "pose_M36_charger"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "charger2"
			{forward	{begin	"board_HighArmor"} {end "seat_driver_car"} {base "open_commander"}}
			{reverse 	{end	"emit_tank_1_hold"} {base "open_commander" -1}}
		}
		{anm "armor"
			{forward	{begin	"board_lowArmor"} 	{end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_lowArmor"} {end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_body"}}
		}
		{anm "armor2"
			{forward	{begin	"board_lowArmor"} {end "pose_pz3_right"}}
			{reverse 	{end	"emit_body"}}
		}
		{anm "armor3"
			{forward	{begin	"board_lowArmor"} {end "pose_univ_carrier_pass_seat04"}}
			{reverse 	{end	"emit_body"}}
		}		
	}

	("crew_human_visible" place(driver)	    door(emit1) visor(driver))
	("crew_human_visible" place(commander)	door(emit4) visor(main))
	("crew_human_visible" place(gunner)  	door(emit2) visor(main))
	("crew_human_visible" place(charger)    door(emit3) visor(around))
	("crew_human_visible" place(charger2)	door(emit0) visor(main))

	("seat_human" place(seat1) bone(seat01) door(emit4)  animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit3)  animation(armor3))
	("seat_human" place(seat3) bone(seat03) door(emit4)  animation(armor))
	("seat_human" place(seat4) bone(seat04) door(emit3)  animation(armor2))

	{sensor
		{visor "around"
			{vision "vehicle_around"}		;// better vision than a in-closed turret 
		}
	}
;==============================================	

	{extender "inventory"
		{box
			{item "ammo bulletusa_90x600 apcbche" 16} 	;70 rounds
			{item "ammo bulletusa_90x600 apbc" 5}
			{item "ammo bulletusa_90x600 he" 25}
			{item "ammo bulletusa_90x600 hvap" 3}
			{item "ammo hmgun_usa" 450}		;550 rounds
			{item "satchel_charge_usa" 1}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "90mm_m3" filling "ammo bulletusa_90x600 apcbche" 1}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic_td"
				zeroing(2.5)
				dispersion(0.25)
			)
		}
		{place "mgun1"
			{type "mgun_aa"}
			{weapon "browning_m2" filled}
		    {foresight "foresight4"}		
			{gunner "commander"}
			{charger "charger2"}
			{ai_in_manual}
			("abm_mgun")
			{basic}
		}
	}

	{mass 19200}
	{Chassis
		("tank_trace" fx("tracks_sm") step(0.52) len(0.50))
		("mobility_tank"
			speed(80) ;----------Max speed when fully accelerated on road, km/h.
			reverse(16) ;---------Max speed in reverse on road, km/h.
			traverse(20) ;-------Track traverse, per second, in degrees.
			weight(19.2) ;-------Weight in Tonnes.
			power(400) ;---------Engine Power, in hp. //engine under normal use was rated 265hp at 2600 rpm
			track(5.0) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(620) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(160) ;---------Range in km, off-road.
		)
	}
	{bone "turret"
		("turret_medium" power_traverse(24))
	}
}