{game_entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.1))
	{props "with_gun" "katusha" "truck" "vision_lev06" "detect_spg"}

	{able "emit_on_attack"}
	{targetSelector "rocket"}
	{targetclass "howitzer"}
	{collider "truck"}
	{patherId "gazaaa"}

	("crew_inside")
	("crew_human" place(driver)	bone(driver)	door(emit1) animation(driver) group(crew))
	("crew_human" place(commander)	bone(commander)	door(emit2) animation(commander) group(crew))

	("board_animation" place(driver) board_begin(board_big-midcar_driver) board_end(seat_driver_car) base(doorleft))
	("board_animation" place(commander) board_begin(board_big-midcar) board_end(seat_passenger) base(doorright))

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	("glass" args "glass_back")
	("glass" args "glass_doorleft")
	("glass" args "glass_doorright")
	("glass" args "glass_front")
	("glass" args "glass_lampl")
	("glass" args "glass_lampr")

	("gun" repair(30) thickness(2))
	{volume "gun" {able {visible 0} {obstacle 0}}}
	{volume "turret" {thickness 2}}

	{extender "inventory"
		{box
			{item "ammo 82mm_rs82" 48}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "weapon 82mm_bm8_48" filled}
			{gunner "commander"}
			{charger "commander"}
			{Barrels 48}
			{StationaryFiring}
		}
	}

	{mass 5300}
	{Chassis
		("car_trace" fx("tracewheel01") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel01d") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(60) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(24) ;--------------------------------Max speed in Reverse.
			weight(5.3) ;--------------------------------Weight in Tonnes.
			power(73) ;----------------------------------Horse Power.
			fuel(80) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(145) ;---------------------------------Range in Kilometers.
		)
		{DisableMoveWhileFiring}
	}

	{Extension "bm8-48.mdl"}

	{bone "turret"
		{limits -90 90}
		{speed2 5}
	}

	{bone "gun_rot"
		{speed2 5}
	}

	(mod "mp"
		{brain
			{properties
				{fire_mode hold}
			}
		}
	)
}
