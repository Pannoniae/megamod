{game_entity
	(include "/properties/cannon_mgun.ext")
	(include "/properties/shadow/tank.inc"  scale(0.6))
	{Extension "4_2_inch_mortar_mk_2.mdl"}
	{props "-mg_stan" "with_gun" "mortar" "vision_lev01_can" "detect_artillery_small" "cannon_sandbag_standard" }
	(mod not "mp" {able "emit_on_attack"})
	{targetclass "howitzer"}
	{targetSelector "cannon_howitzer"}

	{sensor
		{visor "main"
			{vision "cannon_mortar"}
			{bone "visor"}
		}
	}
	{placer
		{place "gunner" {visor "main"}}
	}
	{boarder
		{anm "gunner"
			{forward {end "pose_mortar_gunner" 10}}
		}
		{anm "commander"
			{forward {end "pose_mortar_commander" 10}}
		}
		{anm "driver1"	;// gunner
			{forward {end "mortar_driver_r" 10}}
		}
		{anm "driver2"	;// charger
			{forward {end "mortar_driver_l" 10}}
		}
	}
	{extender "inventory"
		{box
			{item "ammo eng mortar107 he" 15}
			{item "ammo eng mortar107 sm" 10}
			{item "sandbag_vehicle" 5}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{Barrels 1}
			{weapon "weapon 107mm_mk2" filling "ammo eng mortar107 he" 1}
			{RestoreIKAfterAim}
			{gunner "gunner"}
			{charger "gunner"}
			{basic}
			("abm_dymamic_mortar"
				zeroing(3.0)	; // time it takes to aim until the reticle shrinks. Bigger values, more control.
				dispersion(1)   ; // time it takes to distort the reticle when you move the gun (how abrupt it loses zeroing). Bigger values, more control.
			)
		}
	}
	{Texmod "usa"}
	{extender "cannon"
		{animation
			{switch "close"}
			;// "gunner" "commander"
			{move "mortar_driver_r" "mortar_driver_l"}
			{aim "mortar_gunner_aim" "mortar_commander_aim"}
			{fire "mortar_gunner_fire" "mortar_commander_fire"}
			{reload "" "mortar_commander_reload"}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
	}

	{mass 150}
	{Chassis
		("mobility_cannon"
			speed(8) ;----------------------------------Max speed.
			weight(150) ;---------------------------------Weight in Kilograms.
		)
	}

	{bone "basis"
		{speed2 15}
	}
	{bone "turret"
		{speed2 20}
	}
	{bone "foresight"
		{limits -25 20}
		{speed2 10}
	}
	{Texmod "middle_bronze_green"}
}

