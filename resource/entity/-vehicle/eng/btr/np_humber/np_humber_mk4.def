{game_entity
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.0))
	{props "tank" "turret" "wheeled" "with_gun" "vision_lev02" "smoke" "4in" "muzzle_37mm_47mm"}
	{Extension "humber_mkiv.mdl"}
	{boarder
		{anm "driver"
			{forward	{begin	"board_tank_left"} {base "open"}}
			{reverse 	{end	"emit_tank_1_hold"} {base "open" -1}}
		}

		{anm "gunner"
			{forward	{begin	"board_tank_left"} {base "open2"}}
			{reverse 	{end	"emit_tank_1_hold"} {base "open2" -1}}
		}

		{anm "charger"
			{forward	{begin	"board_tank_right"} {base "open"}}
			{reverse 	{end	"emit_tank_1_hold"} {base "open" -1}}
		}

		{anm "commander"
			{forward	{begin	"board_tank_right"} {base "open2"}}
			{reverse 	{end	"emit_tank_1_hold"} {base "open2" -1}}
		}
	}

	(define "crew_human"
		{placer
			{place "%place" {group "%group"}  {visor "%visor"}}
		}
		{boarder
			{door "%door"}
			{link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
		}
	)

	("crew_human" place(driver)		door(emit2) group(crew)	 animation(driver)	    visor(driver))
	("crew_human" place(gunner)		door(emit1) group(crew)	 animation(gunner)	    visor(main))
	("crew_human" place(commander)	door(emit1) group(crew)	 animation(commander)	visor(main))
	{targetclass "armoredcar"}
	{targetSelector "tank_light"}
	
	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 12
			{front	15}
		}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 12
			{front	15}
		}
	}
	{volume "body3"
		{tags "body"}
		{component "body"}
		{thickness 12
			{front	15}
		}
	}
	{volume "turret"
		{component "turret"}
		{tags "turret"}
		{thickness 12
		    {front 15}
		}
	}
	{volume "turret2"
		{component "turret"}
		{tags "turret"}
		{thickness 12}
	}
	{volume "engine"
		{component "engine"}
		{tags "engine"}
		{thickness 12}
	}
	{volume "mantlet"
		{component "turret"}
		{tags "turret"}
		{thickness 12}
	}
	{volume "gun"
		{component "gun"}
		{tags "gun"} 
		{thickness 20}
	}
	{volume "gun2"
		{component "gun"}
		{tags "gun"} 
		{thickness 20}
	}
	{volume "shield1"
		{component "shield"}
		{tags "shield"} 
		{thickness 10}
	}
	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")
	("ammo" args "ammo1")
	{extender "smokescreen"
		{cooldown 10}
		{itemTags "no8_smoke"}
	}
	{extender "inventory"
		{box
		    {item "ammo 7x57b" 1000}
			{item "ammo bulletusa_37 ap" 40}
			{item "ammo bulletusa_37 he" 40}
			{item "ammo bulletusa_37 apcbc" 5}
			{item "no8_smoke" 2}
		}
	}
	{Weaponry
         ("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "37mm_m6" filled}
			{charger "gunner"}
			("abm_dymamic"
				zeroing(2.0)
				dispersion(0.2)
			)
		}
		{place "mgun"
            {type "coaxial"}
			{weapon "besa_mg" filled}
			{charger "commander"}
			{foresight "foresight3"}
			{basic}
			("abm_mgun")
		}
	}	
	{mass 5000}
	{Chassis "wheel"
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(80) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(16) ;--------------------------------Max speed in Reverse.
			weight(5.0) ;--------------------------------Weight in Tonnes.
			power(90) ;---------------------------------Horse Power.
			fuel(145) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(320) ;---------------------------------Range in Kilometers.
		)
	}

	{bone "gun_rot"
		{speed2 10}
	}
	{bone "turret"
		{speed2 15}
	}
}

