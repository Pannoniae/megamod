{game_entity
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.0))
	{props "tank" "turret" "wheeled" "with_gun" "vision_lev04" "muzzle_75mm_76mm_sides"}
	{Extension "aec_mk2.mdl"}

	{targetclass "armoredcar"}
	{targetSelector "tank_light"}

	{extender "enumerator"
		{digit_folder "us2"}
	}

	("armoredcar_tier2")
	("turret" repair(50))
	("gun" repair(30) thickness(20))

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	("transmission" args "transmission")
	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 16
			{front	25}
		}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 16
			{front	25}
		}
	}
	{volume "body3"
		{tags "body"}
		{component "body"}
		{thickness 16
			{front	25}
		}
	}
	{volume "engine"
		{tags "engine"}
		{component "engine"}
		{thickness 16
			{front	25}
		}
	}
	{volume "turret"
		{tags "turret"}
		{component "turret"}
		{thickness 60
			{front 65}
			{rear 60}		
			{top 15}		
			{bottom 15}
		}
	}
	{volume "turret2"
		{tags "turret"}
		{component "turret"}
		{thickness 60}
	}
	{volume "shield1"
		{tags "shield"}
		{component "shield"}
		{thickness 25}
	}
	{boarder
		{anm "left"
			{forward	{begin	"board_tank_right"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_left"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}

	}
	(define "crew_human"
		{placer
			{place "%place" {group "crew"} {visor "%visor"}}
		}
		{boarder
			{door "emit1"}
			{door "emit2"}
			{link "emit1" "%place" {anm "left"} {forward putoff} {reverse puton}}
			{link "emit2" "%place" {anm "right"} {forward putoff} {reverse puton}}
		}
	)

	("crew_human" place(driver)		visor(driver))
	("crew_human" place(gunner)		visor(main))
	("crew_human" place(commander)	visor(around))
	("crew_human" place(charger)	visor(driver))
	{extender "inventory"
		{box
			{item "dynamite"}
			{item "bullet_57x441 eng apcbc" 37}
			{item "bullet_57x441 eng he" 28}
			{item "bullet_57x441 eng apds" 5}
			{item "ammo 7x57b" 3500}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "57mm_qf6_mk5" filling "bullet_57x441 eng apcbc" 1}
			("abm_dymamic"
				zeroing(2.0)
				dispersion(0.15)
			)
		}
		{place "mgun1"
			{type "coaxial"}
			{weapon "besa_mg" filled}
			{foresight "foresight4"}
			{gunner "gunner"}
			{charger "charger"}
			("abm_mgun")
			{basic}
		}
	}

	{mass 11000}
	{Chassis "wheel"
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(62) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(12) ;--------------------------------Max speed in Reverse.
			weight(11) ;--------------------------------Weight in Tonnes.
			power(158) ;---------------------------------Horse Power.
			fuel(145) ;----------------------------------Fuel capacity in Litres.
			type(diesel) ;---------------------------------Fuel type.
			range(400) ;---------------------------------Range in Kilometers.
		)
	}

	{bone "gun_rot"
		{limits -15 20}
		{speed2 10}
	}
	{bone "turret"
		{speed2 12}
	}
}

