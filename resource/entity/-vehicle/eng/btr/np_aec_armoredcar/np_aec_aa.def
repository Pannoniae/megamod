{game_entity
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.0))
	{props "aa" "tank" "turret" "wheeled" "with_gun" "vision_lev03"}
	{Extension "aec_aa.mdl"}

	{targetclass "armoredcar"}
	{targetSelector "tank_light"}

	{extender "enumerator"
		{digit_folder "us2"}
	}

	("armoredcar_tier2")
	("turret" repair(50))
	("gun" repair(30) thickness(20))

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	("transmission" args "transmission")
	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 16
			{front	25}
		}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 16
			{front	25}
		}
	}
	{volume "body3"
		{tags "body"}
		{component "body"}
		{thickness 16
			{front	25}
		}
	}
	{volume "engine"
		{tags "engine"}
		{component "engine"}
		{thickness 16
			{front	25}
		}
	}
	{volume "turret"
		{tags "turret"}
		{component "turret"}
		{thickness 60
			{front 65}
			{rear 60}		
			{top 15}		
			{bottom 15}
		}
	}
	{volume "turret2"
		{tags "turret"}
		{component "turret"}
		{thickness 60}
	}
	{volume "shield1"
		{tags "shield"}
		{component "shield"}
		{thickness 25}
	}
	{boarder
		{anm "left"
			{forward	{begin	"board_tank_left"}{end "seat_gunner_stand"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"}{end "seat_gunner_stand"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}

	}
	(define "crew_human_visible"
		{placer
			{place "%place"
				{group "crew"}
				{visor "%visor"}
				{linkbone "%place"}
				{turnoff {sensor}}
				{openForCrush 0}
			}
		}
		{boarder
			{door "%door"}
			{door "%door2"}
			{link "%door" "%place" {anm "%anm_left"} {forward putoff} {reverse puton}}
			{link "%door2" "%place" {anm "%anm_right"} {forward putoff} {reverse puton}}
		}
	)
	(define "crew_human"
		{placer
			{place "%place"
				{group "crew"}
				{visor "%visor"}
			}
		}
		{boarder
			{door "%door"}
			{door "%door2"}
			{link "%door" "%place" {anm "left"} {forward putoff} {reverse puton}}
			{link "%door2" "%place" {anm "right"} {forward putoff} {reverse puton}}
		}
	)
	("crew_human" place(driver)		door(emit1) door2(emit2) visor(driver))
	("crew_human_visible"		place(gunner)		door(emit1) door2(emit2) visor(gunner anm_left(left) anm_right(right)))
	("crew_human" place(commander)	door(emit1) door2(emit2) visor(main))
	("crew_human" place(charger)		door(emit1) door2(emit2) visor(main))
		
	{sensor
		{visor "gunner" 
			{bone "visor1"}
			{vision "vehicle_top_mgun"}
		}
	}
	
	{extender "inventory"
		{box
			{item "dynamite"}
			{item "bullet20_eng_auto ap" 540}
			{item "bullet20_eng_auto he" 600}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "20mm_oerlikon_x2" filling "bullet20_eng_auto ap" 60}
			{Barrels 2}
			("abm_dymamic"
				zeroing(2.0)
				dispersion(0.15)
			)
		}
	}

	{mass 11000}
	{Chassis "wheel"
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(62) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(12) ;--------------------------------Max speed in Reverse.
			weight(11) ;--------------------------------Weight in Tonnes.
			power(158) ;---------------------------------Horse Power.
			fuel(145) ;----------------------------------Fuel capacity in Litres.
			type(diesel) ;---------------------------------Fuel type.
			range(400) ;---------------------------------Range in Kilometers.
		)
	}

	{bone "gun_rot"
		{speed2 12}
	}
	{bone "turret"
		{speed2 12}
	}
}

