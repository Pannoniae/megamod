{game_entity
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc" scale(0.6))
	{Extension "qf3,7.mdl"}
	(include "/properties/selection/cannon.inc" scale(0.7))
	{props "wheeled" "vision_lev04_can" "muzzle_85mm_93mm" "cannon_sandbag_standard" "trailer" "trailer_heavy" "detect_atgun"  "c_aa_hvy"}
	{PatherID "cannon.large"}
	{targetclass "cannon_big"}
	{targetSelector "cannon_aa"}

	("wheel" args "wheelr1")
	("wheel" args "wheell1")

	{Volume "body"
		{thickness 15}
		{tags "body"}
		{component "body"}
	}
	("gun" repair(30) thickness(30))
	{extender "shield"
		{on}
	}
	{component "shieldl1" {tags "shield"}}
	("shield" args "shieldl1" 5)
	("armor_heavy_cannon")
	("crew_wheeled_cannon")
	
	{boarder
		{anm "gunner"
			{forward {end "pose_flak_gunner" 10}}
		}
		{anm "commander"
			{forward {end "pose_flak_gunner" 10}}
		}
		{anm "driver1"	;// gunner
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"	;// charger
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "seat1"	;// gunner
			{forward {end "pose_flak_gunner" 10}}
		}
		{anm "seat2"	;// charger
			{forward {end "pose_flak_gunner" 10}}
		}
	}
	{extender "cannon"
		{animation
			{switch "close"}
			;// "gunner" "commander"
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right"}
			{aim "" ""}
			{reload ""  ""}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
		{rotate_ik_Limit 0}
	}

	{extender "inventory"
		{box
			{item "ammo bullet94_eng apcbc" 20}
			{item "ammo bullet94_eng he" 30}
			{item "ammo bullet94_eng sm" 12}
			{item "sandbag_vehicle" 1}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "94mm_vickers" filling "ammo bullet94_eng apcbc" 1}
			{charger "commander"}
			("abm_dymamic_gun"
				zeroing(2.5)
				dispersion(0.50)
			)
		}
	}

	{mass 8000}
	{Chassis "track"
		("car_trace" fx("tracewheel02") step(0.1) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel02") step(0.1) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_cannon"
			speed(4.6) ;-----------------------------------Max speed.
			weight(8000) ;---------------------------------Weight in Kilograms.
		)
	}

	{bone "gun_rot"
		{limits -3 82}
		{speed2 12}
	}
	{bone "turret"
		{speed2 15}
	}
}

