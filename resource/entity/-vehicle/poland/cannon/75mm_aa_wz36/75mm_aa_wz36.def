{game_entity
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc" scale(0.6))
	{Extension "75mm_wz36.mdl"}
	(include "/properties/selection/cannon.inc" scale(0.7))
	{props "wheeled" "vision_lev04_can" "muzzle_85mm_93mm_sides" "cannon_sandbag_standard" "trailer" "trailer_heavy" "detect_atgun" "c_aa_hvy"}
	{PatherID "cannon.large"}
	{targetclass "cannon_big"}
	{targetSelector "cannon_aa"}

	("wheel" args "wheelright1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft1")
	("wheel" args "wheelleft2")

	("gun" repair(30) thickness(30))

	("armor_heavy_cannon")
	("crew_wheeled_cannon")
	{boarder
		{anm "gunner"
			{forward {end "pose_flak_gunner" 10}}
		}
		{anm "commander"
			{forward {end "pose_flak_gunner2" 10}}
		}
		{anm "driver1"	;// gunner
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"	;// charger
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "seat1"	;// gunner
			{forward {end "pose_flak_gunner" 10}}
		}
		{anm "seat2"	;// charger
			{forward {end "pose_flak_gunner2" 10}}
		}
	}
	{extender "cannon"
		{animation
			{switch "close"}
			;// "gunner" "commander"
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right"}
			{aim "" ""}
			{reload ""  ""}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
		{rotate_ik_Limit 0}
	}

	{extender "inventory"
		{box
			{item "bullet75_pol ap" 50}
			{item "bullet75_pol he" 50}
			{item "sandbag_vehicle" 1}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "75mm_wz36" filling "bullet75_pol ap" 1}
			("abm_dymamic_gun"
				zeroing(2.0)
				dispersion(0.15)
			)
		}
	}

	{mass 4983}
	{Chassis "track"
		("car_trace" fx("tracewheel02") step(0.1) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel02") step(0.1) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_cannon"
			speed(4.6) ;-----------------------------------Max speed.
			weight(4983) ;---------------------------------Weight in Kilograms.
		)
	}

	{bone "gun_rot"
		{limits -3 82}
		{speed2 15}
	}
	{bone "turret"
		{speed2 20}
	}
}