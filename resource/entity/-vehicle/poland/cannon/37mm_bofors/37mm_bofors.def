{game_entity
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc" scale(0.6))
	{extension "37mm_bofors.mdl"}
	(include "/properties/selection/cannon.inc" scale(0.7))
	{props "cannon_small" "wheeled" "vision_lev02_can" "muzzle_37mm_47mm" "cannon_sandbag_small" "trailer" "trailer_light" "detect_atgun_small"}
	{collider "cannon_small"}
	{targetclass "cannon_small"}
	{targetSelector "cannon_small"}

	("wheel" args "wheelright")
	("wheel" args "wheelleft")

	("gun" repair(30) thickness(20))
	("shield_group" args "shield1" 4.5 "shield")
	("shield_group" args "shield2" 4.5 "shield")
	("shield_group" args "shield3" 4.5 "shield")
	("shield" args "shield_lower" 4.5)

	("armor_light_cannon")
	("crew_wheeled_cannon")

	{volume "shield1" {able {holed}}}

	{boarder
		{anm "gunner"
			{forward {end "cannon_small_gunner" 10}}
		}
		{anm "commander"
			{forward {end "cannon_small_commander" 10}}
		}
		{anm "driver1"	;// gunner
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"	;// charger
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "seat1"	;// gunner
			{forward {end "pose_seat_cannon_left" 10}}
		}
		{anm "seat2"	;// charger
			{forward {end "pose_seat_cannon_right" 10}}
		}
	}
	{extender "cannon"
		{animation
			{switch "close"}
			;// "gunner" "commander"
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right"}
			{aim "cannon_small_gunner_aim" ""}
			{reload ""  "cannon_small_charger_reload"}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
		{rotate_ik_Limit 0}
	}
		
	{extender "inventory"
		{box
			{item "bullet37_pol ap" 47}
			{item "bullet37_pol he" 58}
			{item "sandbag_vehicle" 1}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{weapon "37mm_wz36" filling "bullet37_pol ap" 1}
			{RestoreIKAfterAim}
			("abm_dymamic_gun"
				zeroing(2.7)
				dispersion(0.12)
			)
		}
	}

	{mass 432}
	{Chassis "track"
		("car_trace" fx("tracewheel05a") step(0.14) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility_cannon"
			speed(9.8) ;----------------------------------Max speed.
			weight(432) ;---------------------------------Weight in Kilograms.
		)
	}

	{bone "basis"
		{speed2 9}
	}
	{bone "gun_rot"
		{limits -5 25}
		{speed2 10}
	}
	{bone "turret"
		{limits -30 30}
		{speed2 18}
	}
}