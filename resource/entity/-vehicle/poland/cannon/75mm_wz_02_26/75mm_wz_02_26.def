{game_entity	
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc" scale(0.6))
	{Extension "75mm_wz_02_26.mdl"}
	(include "/properties/selection/cannon.inc" scale(0.7))
	{props "wheeled" "vision_lev03_can" "muzzle_50mm_57mm" "cannon_sandbag_standard" "trailer" "trailer_light"}
	{targetclass "howitzer"}
	{targetSelector "cannon_howitzer"}

	("solid_wheel" args "wheelleft")
	("solid_wheel" args "wheelright")

	("gun" repair(30) thickness(20))

	("armor_light_cannon")
	("crew_wheeled_cannon_4")

	{volume "wheelleft" {material "wood"} {tags "wood"} {thickness 2}}
	{volume "wheelright" {material "wood"} {tags "wood"} {thickness 2}}

	{boarder
		{anm "gunner"
			{forward {end "pose_pdr25_gunlayer" 10}}
		}
		{anm "charger"
			{forward {end "pose_m42_charger" 10}}
		}
		{anm "charger2"
			{forward {end "pose_pdr25_charger" 10}}
		}
		{anm "commander"
			{forward {end "pose_watch_binocular" 10}}
		}
		{anm "driver1"	;// gunner
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"	;// gunner2
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "driver3"	;// charger
			{forward {end "mgun_browning_driver_l" 10}}
		}
		{anm "driver4"	;// charger2
			{forward {end "mgun_browning_driver_l" 10}}
		}
		{anm "seat1"	;// gunner
			{forward {end "pose_seat_cannon_left" 10}}
		}
		{anm "seat2"	;// gunner2
			{forward {end "pose_seat_cannon_right" 10}}
		}
		{anm "seat3"	;// gunner
			{forward {end "pose_seat_cannon_left" 10}}
		}
		{anm "seat4"	;// gunner2
			{forward {end "pose_seat_cannon_right" 10}}
		}
	}

	{extender "cannon"
		{animation
			{switch "close"}
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right" "mgun_browning_driver_l" "mgun_browning_driver_l"}
			{aim "cannon_zis3_gunlayer" "cannon_zis3_gunlayer" "" ""}
			{fire "cannon_gunlayer_fire-alert" "" "cannon_zis3_charger_fire" ""}
			{reload "" "" "cannon_zis3_charger" ""}
		}
		{move {workers "driver1" "driver2" "driver3" "driver4"} {obstacle "close"} {minWork 2}}			
		{attack {workers "gunner" "charger" "charger2" "commander"} {obstacle "open"}}		
		{trailing {workers "seat1" "seat2" "seat3" "seat4"}}								
	}

	{extender "inventory"
		{box
			{item "bullet75_pol ap" 30}
			{item "bullet75_pol he" 54}
			{item "sandbag_vehicle" 2}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{weapon "75mm_wz_02" filling "bullet75_pol he" 1}
			{RestoreIKAfterAim}
			("abm_dymamic_gun"
				zeroing(5)
				dispersion(0.08)
			)
		}
	}
	{mass 1050}
	{Chassis "track"
		("car_trace" fx("tracewheel06") step(0.07) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility_cannon"
			speed(8.2) ;---------------------------------Max speed.
			weight(1050) ;--------------------------------Weight in Kilograms.
		)
	}

	{bone "basis"
		{speed2 5}
	}
	{bone "gun_rot"
		{speed2 4}
	}
}