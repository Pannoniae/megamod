	("wheel" args "wheelright3")
	("wheel" args "wheelleft3")

	("glass" args "glass_doorl")
	("glass" args "glass_doorr")
	("glass" args "glass_front")
	("glass" args "glass_back")

	("fuel" args "fuel")
	("transmission" args "transmission")

