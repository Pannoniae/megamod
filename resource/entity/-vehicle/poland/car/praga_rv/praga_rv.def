	{volume "bodyback" {thickness 5} {material "wood"} {tags "wood"} {able {holed}}}
	
	{component "cabin"	
		{RepairTime 12}
	}
	{volume "cabin"
		{thickness 6}
	}
	{component "engine"	
		{RepairTime 12}
	}
	{volume "engine"
		{thickness 6}
	}
	{Volume "body"
		{tags "body"}
		{component "body"}
		{thickness 7}   
	}
	{mass 3810}
	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03d") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(70) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(18) ;--------------------------------Max speed in Reverse.
			weight(3.81) ;------------------------------Weight in Tonnes.
			power(68) ;----------------------------------Horse Power.
			fuel(137) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(380) ;---------------------------------Range in Kilometers.
		)
	}
