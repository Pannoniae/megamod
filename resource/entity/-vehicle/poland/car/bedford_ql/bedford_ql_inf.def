{game_entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.1))
	{props "multi_board" "truck" "vision_lev02" "tractor" "tractor_heavy"}
	{able "emit_on_attack"}
	{Extension "bedford.mdl"}
	{collider "truck"}
	{patherId "gazaaa"}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	("glass" args "glass_1")
	("glass" args "glass_2")
	("fuel" args "fuel")


	("bodyback" repair(30))
	
	{volume "shield"
		{thickness 0.01}
		{material "fabric"}
		{able {NoWoundDecal}}
		{component "shield"}
	}
	{component "shield"
		{RepairTime 10}
		{RepairOrder 12}
	}
	{volume "bodyback" {thickness 5} {material "wood"} {tags "wood"} {able {holed}}}

	("crew_2_human")
	("passenger_10_human")

	{placer {place "commander" {group "crew"}}}

	
	("board_animation"
		place(commander)
		board_begin(board_opel_driver)
		board_end(seat_passenger)
		base(doorleft)
	)
	("board_animation"
		place(driver)
		board_begin(board_big-highcar)
		board_end(seat_passenger)
		base(doorright)
	)

	{boarder
		{anm "passenger"
			{forward {begin "board_body"} {end "seat_passenger"} {base "board"}}
			{reverse {end "emit_body" 1} {base "board"}}
		}
	}

	{extender "shield" {on}}

	{extender "inventory"
		{box
      			{size 6 10}
			{clear}
			{item "antipersonnel" "mine" 15}
			{item "dynamite"}
			{item "can"}
			{item "repair_kit"}
			{item "ammo_box_inf_eng" 5}
			{item "mk1" "grenade" 20}
			{item "smoke" "grenade" 10}
		}
	}
	(include "/properties/resupply.inc")
	("truck_ammo")

	{mass 6900}
	{Chassis
		("car_trace" fx("tracewheel01") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel01d") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(72) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(14) ;--------------------------------Max speed in Reverse.
			weight(6.9) ;--------------------------------Weight in Tonnes.
			power(72) ;----------------------------------Horse Power.
			fuel(127) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(250) ;---------------------------------Range in Kilometers.
		)
	}

}