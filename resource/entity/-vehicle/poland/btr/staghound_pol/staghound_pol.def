{game_entity
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.0))
	{props "tank" "turret" "wheeled" "with_gun" "vision_lev02" "muzzle_25mm"}
	{Extension "staghound.mdl"}

	{targetclass "armoredcar"}
	{targetSelector "tank_light"}


	("armoredcar_tier2")
	("turret" repair(50))
	("gun" repair(30) thickness(20))

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	("transmission" args "transmission")
	{volume "body"
		{tags "body"}
		{component "body"}
		{thickness 19
			{front	22}
		}
	}
	{volume "turret1"
		{tags "turret"}
		{component "turret"}
		{thickness 32
			{front	45}
		}
	}
	{volume "turret2"
		{tags "turret"}
		{component "turret"}
		{thickness 32}
	}
	{Volume "mantlet"
		{tags "turret"}
		{component "turret"}
		{thickness 32}
	}
	{volume "engine"		
		{thickness 38}
	}
	("ammo" args "ammo1")

	{boarder
		{anm "driver"
			{forward	{begin	"board_tank_left"} {base "open"}}
			{reverse 	{end	"emit_tank_1_hold"} {base "open" -1}}
		}
		{anm "gunner"
			{forward	{begin	"board_tank_left"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "commander"
			{forward	{begin	"board_tank_right"} {end "seat_commander_hatch"} {base "open"}}
			{reverse 	{end	"emit_tank_1_hold"} {base "open" -1}}
		}
	}

	(define "crew_human"
		{placer
			{place "%place" {group "%group"}  {visor "%visor"}}
		}
		{boarder
			{door "%door"}
			{link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
		}
	)
	("crew_human" place(driver)		door(emit2) group(crew)	 animation(driver)	    visor(driver))
	("crew_human" place(gunner)		door(emit1) group(crew)	 animation(gunner)	    visor(main))
	("crew_human" place(commander)	door(emit2) group(crew)	 animation(commander)	visor(around))
	("crew_human" place(gunner3)	door(emit2) group(crew)	 animation(driver)	    visor(driver))

	{extender "inventory"
		{box
			{item "ammo 7x63" 1500}
			{item "ammo bulletusa_37 ap" 40}
			{item "ammo bulletusa_37 he" 40}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "37mm_m6" filling "bulletusa_37 ap" 1}
			{gunner "gunner"}
			{charger "commander"}
			("abm_dymamic_stabilised"
				zeroing(2.8)
				dispersion(0.20)
			)
		}
		{place "mgun1"
			{type "coaxial"}
			{weapon "browning_m19" filled}
			{foresight "foresight4"}
			{gunner "gunner"}
			{charger "commander"}
			("abm_mgun")
			{basic}
		}
		{place "mgun"
			{type "hull"}
			{weapon "browning_m19" filled}
			{foresight "foresight3"}
			{gunner "gunner3"}
			{charger "gunner3"}
			("abm_mgun")
			{basic}
		}
	}

	{mass 8200}
	{Chassis "wheel"
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(72) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(30) ;--------------------------------Max speed in Reverse.
			weight(8.2) ;--------------------------------Weight in Tonnes.
			power(105) ;---------------------------------Horse Power.
			fuel(145) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(200) ;---------------------------------Range in Kilometers.
		)
	}

	{bone "gun_rot"
		{limits -6 15}
		{speed2 10}
	}
	{bone "turret"
		{speed2 12}
	}
}