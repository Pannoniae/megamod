{game_entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.1))
	{props "aa" "truck" "turret" "with_gun" "multi_board" "vision_lev02" "muzzle_75mm_76mm" "tractor" "tractor_medium"}
	{able "emit_on_attack"}
	{Extension "3ro.mdl"}
	{patherId "gazaaa"}
	{targetSelector "cannon_aa"}
	{targetclass "cannon_big"}
	{collider "truck"}
	

	("crew_2_human")
	("board_animation"
		place(driver)
		board_begin(board_big-midcar)
		board_end(seat_driver_car)
		base(doorright)
	)
	("board_animation"
		place(commander)
		board_begin(board_big-midcar_driver)
		board_end(seat_passenger)
		base(doorleft)
	)
	{boarder
		{anm "passenger"
			{forward	{begin	"board_body"} {end "seat_passenger"}}
			{reverse 	{end	"emit_body" 1}}
		}
	}

	{boarder
		{anm "gunner"
			{forward	{begin	"board_LowTank_stand"} {end "pose_flak38_gunlayer"}}
			{reverse 	{end	"emit_tank_1"}}
	    	}
		{anm "charger"
			{forward	{begin	"board_LowTank_stand"} {end "pose_flak38_charger_right"}}
			{reverse 	{end	"emit_tank_1"}}
 	   	}
	}
	("crew_human" place(gunner)	bone(gunner)	door(emit3) animation(gunner))
	("crew_human" place(charger)	bone(charger)	door(emit4) animation(gunner))

		
	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")
	("glass" args "glass_1")
	("glass" args "glass_2")


	("shield" args "shield"	10)

	{Volume "body"
	     {thickness 10}
	}
	{component "body"	
		{RepairTime 10}
	}
	{Volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 10}
	}
	{Volume "cabin"
	      {thickness 3}
	}
	{component "cabin"	
		{RepairTime 10}
	}
	{component "engine"	
		{RepairTime 10}
	}
	{volume "engine"
		{thickness 5}
	}
	{Volume "gun_rot"
		{thickness 5}
	}
	{Volume "gun"
		{thickness 10}
	}
	{Volume "gunrot"
		{thickness 10}
	}
	{Volume "turret"
		{thickness 10}
	}
	{Volume "gun_stand"
		{thickness 10}
	}
	{sensor
		{visor "driver"
			{vision "tank_driver"}
			{bone "visor2"}
		}
		{visor "main"
			{vision "human"}
			{bone "visor1"}
		}
	}
  	{mass 4600}
	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03d") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(60) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(12) ;--------------------------------Max speed in Reverse.
			weight(4.60) ;------------------------------Weight in Tonnes.
			power(70) ;----------------------------------Horse Power.
			fuel(100) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(145) ;---------------------------------Range in Kilometers.
		)
	}
	{extender "inventory"
		{box
			{item "bullet90_ita apcbc" 20}
			{item "bullet90_ita he" 10}
		}
	}	
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{weapon "90mm_m90_53" filling "bullet90_ita apcbc" 1}
			{RestoreIKAfterAim}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic_aa"
				zeroing(2.9)
				dispersion(0.08)
			)
		}
	}
	{bone "gun_rot"
		{speed2 25}
	}
	{bone "turret"
		{speed2 25}
	}
