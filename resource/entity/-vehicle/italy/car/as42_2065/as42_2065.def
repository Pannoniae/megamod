{game_entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(0.9))
	(include "/properties/selection/vehicle.inc" scale(0.8))
	{props "vision_lev02" "muzzle_20mm_25mm_auto"}
	{able "emit_on_attack"}
	{PatherId "kubel"}
	{targetSelector "car_bullet"}
	{targetclass "cannon_zenite"}

	("wheel" args "wheelleft1")
	("wheel" args "wheelleft2")
	("wheel" args "wheelright1")
	("wheel" args "wheelright2")
	("glass" args "glass")	
	
	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 7
		}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 7
		}
	}
	{volume "engine"
		{tags "body"}
		{component "engine"}
		{thickness 7
		}
	}
	{volume "sticky"
		{tags "grenade_fg_target"}
		{able clear {contact} {touch}}
		{component "sticky_body"}
	}
	{component "sticky_body"}
	("gun" repair(30) thickness(10))
	("turret" repair(25))
	{Volume "turret"
		{thickness 10}
	}

	{boarder
		{anm "driver"
			{forward	{begin	"board_tank_left"} {end "seat_driver_car"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "gunner"
			{forward	{begin	"board_tank_left"} {end "pose_flak30_gunner" 10}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "passenger1"
			{forward	{begin	"board_tank_left"} {end "seat_passenger"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "passenger2"
			{forward	{begin	"board_tank_left"} {end "seat_passenger"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
	}

(define "crew_human"
	{placer
		{place "%place" {group "crew"} {linkbone "%place"} {turnoff {sensor} {shadow}}}
	}
	{boarder
		{door "%door"}
		{link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
	}
)

{placer
	{place "driver" {visor "driver"}}
	{place "gunner" {visor "main"}}
	{place "charger" {visor "main"}}
}

("crew_human" place(driver)	door(emit1) group(crew)  animation(driver))
("crew_human" place(gunner)	door(emit2) group(crew)	 animation(gunner))
("crew_human" place(charger) 	 door(emit1) group(crew) animation(passenger1))

	{sensor 
		{visor "driver" 
			{vision "human"}
			{bone "visor2"}
		}
		{visor "main"
			{vision "human"}
			{bone "visor1"}
		}
	}

	{extender "inventory"
		{box
			{item "bullet20_ita ap" 480}
			{item "bullet20_ita he" 480}
		}
	}

	{Weaponry
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "20mm_m35" filled}
			{gunner "gunner"}
			{charger "charger"}
			("abm_dymamic_aa"
				zeroing(1.2)
				dispersion(0.15)
			)
		}
	}
	{mass 4500}
	{Chassis
		("car_trace" fx("tracewheel01") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel01d") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(72) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(24) ;--------------------------------Max speed in Reverse.
			weight(4.5) ;--------------------------------Weight in Tonnes.
			power(91) ;----------------------------------Horse Power.
			fuel(80) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(480) ;---------------------------------Range in Kilometers.
		)
	}
	{Extension "as42_2065.mdl"}
	{bone "gun_rot"
	      {limits -20 60}
	}
}
