{game_entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.1))
	{props "multi_board" "truck" "vision_lev02" "tractor" "tractor_heavy"}
	{able "emit_on_attack"}
	{Extension "fiat626.mdl"}
	{collider "truck"}
	{patherId "gazaaa"}

	(include "/properties/resupply.inc")
	("truck_ammo")

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	("glass" args "glass_1")
	("glass" args "glass_2")
	("fuel" args "fuel")
	("transmission" args "transmission")
	{volume "shield"
		{thickness 0.01}
		{material "fabric"}
		{able {NoWoundDecal}}
		{component "shield"}
	}
	{component "shield"
		{RepairTime 10}
		{RepairOrder 12}
	}

	{Volume "cabin"
	      {thickness 3}
	}
	{component "cabin"	
		{RepairTime 10}
	}
	{component "engine"	
		{RepairTime 10}
	}
	{volume "engine"
		{thickness 5}
	}

	("bodyback" repair(30))
	{volume "bodyback" {thickness 5} {material "wood"} {tags "wood"} {able {holed}}}


	("crew_2_human")
	("passenger_10_human")

	("board_animation"
		place(driver)
		board_begin(board_big-midcar_driver)
		board_end(seat_driver_car)
		base(doorleft)
	)
	("board_animation"
		place(commander)
		board_begin(board_big-midcar)
		board_end(seat_passenger)
		base(doorright)
	)

	{boarder
		{anm "passenger"
			{forward {begin "board_body"} {end "seat_passenger"} {base "board"}}
			{reverse {end "emit_body" 1} {base "board"}}
		}
	}
	{extender "shield" {on}}
	{extender "inventory"
    	 	{box
			{item "ammo_box_inf_ita" 2}
        	}
	}
	{mass 4000}
	{Chassis
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03d") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(56) ;----------------------------------Max speed.
			speedatmaxturn(15) ;-------------------------Max speed at max turn.
			reverse(12) ;--------------------------------Max speed in Reverse.
			weight(4.00) ;------------------------------Weight in Tonnes.
			power(45) ;----------------------------------Horse Power.
			fuel(100) ;----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(145) ;---------------------------------Range in Kilometers.
		)
	}
}
