{game_entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc" scale(0.9))
	(include "/properties/selection/vehicle.inc" scale(0.8))
	{props "vision_lev02"}
	{able "emit_on_attack"}
	{PatherId "kubel"}
	{targetSelector "car_bullet"}
	{targetclass "car"}

	("wheel" args "wheelleft1")
	("wheel" args "wheelleft2")
	("wheel" args "wheelright1")
	("wheel" args "wheelright2")
	("glass" args "glass")	
	
	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 7
		}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 7
		}
	}
	{volume "engine"
		{tags "body"}
		{component "engine"}
		{thickness 7
		}
	}
	{volume "sticky"
		{tags "grenade_fg_target"}
		{able clear {contact} {touch}}
		{component "sticky_body"}
	}
	{component "sticky_body"}


	{boarder
		{anm "driver"
			{forward	{begin	"board_tank_left"} {end "seat_driver_car"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "gunner"
			{forward	{begin	"board_tank_left"} {end "pose_mgun_stan"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "passenger1"
			{forward	{begin	"board_tank_left"} {end "seat_passenger"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "passenger2"
			{forward	{begin	"board_tank_left"} {end "seat_passenger"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
	}

(define "crew_human"
	{placer
		{place "%place" {group "crew"} {linkbone "%place"} {turnoff {sensor} {shadow}}}
	}
	{boarder
		{door "%door"}
		{link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
	}
)

{placer
	{place "driver" {visor "driver"}}
	{place "gunner" {visor "main"}}
	{place "gunner2" {visor "mgun"}}
}

("crew_human" place(driver)		door(emit1) group(crew)  animation(driver))
("crew_human" place(gunner)		door(emit2) group(crew)	 animation(gunner))
("crew_human" place(gunner1) bone(gunner1) door(emit1) group(crew) animation(passenger1))
("crew_human" place(gunner2) bone(gunner2) door(emit2) group(crew) animation(passenger2))

	{sensor 
		{visor "driver" 
			{vision "human"}
			{bone "visor2"}
		}
		{visor "main"
			{vision "human"}
			{bone "visor1"}
		}
		{visor "mgun"
			{vision "human"}
			{bone "mgun2"}
		}
	}

	{extender "inventory"
		{weapon "mgun" {mask "mountable"}}
		{weapon "mgun1" {mask "mountable"}}
		{weapon "mgun2" {mask "mountable"}}
		{box
			{item "ammo 8x59" 1100}
			{item "ammo bullet20x105b" 120}
			{item "solothurn" filling "ammo bullet20x105b" 5 {user "mgun"}}
			{item "breda_37" filling "ammo 8x59" 20 {user "mgun1"}}
			{item "breda_37" filling "ammo 8x59" 19 {user "mgun2"}}			
		}
	}

	{Weaponry
		{place "mgun"
			{type "hull"}
			;{foresight "foresight3"}
			{LinkBone "gun"}
			{LinkAnimation "off"}
			{gunner "gunner"}
			{charger "gunner"}
			("abm_mgun")
		}
		{place "mgun1"
			;{foresight "foresight4"}
			{type "main"}
			{gunner "gunner1"}
			{charger "gunner1"}
			{LinkBone "mgun1"}
			{LinkAnimation "off"}
			("abm_mgun")
			{basic}
		}
		{place "mgun2"
			;{foresight "foresight5"}
			{type "rear"}
			{gunner "gunner2"}
			{charger "gunner2"}
			{LinkBone "mgun2"}
			{LinkAnimation "off"}
			("abm_mgun")
			{basic}
		}
	}
	{mass 4500}
	{Chassis
		("car_trace" fx("tracewheel01") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel01d") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(72) ;----------------------------------Max speed.
			speedatmaxturn(17) ;-------------------------Max speed at max turn.
			reverse(24) ;--------------------------------Max speed in Reverse.
			weight(4.5) ;--------------------------------Weight in Tonnes.
			power(91) ;----------------------------------Horse Power.
			fuel(80) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(480) ;---------------------------------Range in Kilometers.
		)
	}
	{Extension "as42.mdl"}
}
