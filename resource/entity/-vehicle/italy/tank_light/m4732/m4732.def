{game_entity
	(include "/properties/tank_assaultgun.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{collider "tank.light"}
	{props "td" "light" "-turret" "mantlet" "vision_lev03" "muzzle_37mm_47mm" "shell_eject" "open_top" "detect_tank_light"}
	{targetclass "tank_light"}
	{targetSelector "tank_bullet"}
	{patherId "tank.light"}
	{Extension "m4732.mdl"}
	("tank_light_tier1")
	
	{volume "sticky"
		{tags "sticky"}
		{able clear {contact} {touch}}
		{component "sticky_body"}
	}
	{component "sticky_body"}
	{volume "body1"
		{component "body"}
		{tags "body"}
		{thickness 15
			{front 30}
			{top 6}
			{bottom 6}
		}
	}
	{volume "body2"
		{component "body"}
		{tags "body"}
		{thickness 15
			{front 30}
			{top 6}
			{bottom 6}
		}
	}
	{volume "shield"
		{component "body"}
		{tags "body"}
		{thickness 15
			{front 30}
			{top 6}
			{bottom 6}
		}
	}
	{volume "engine"
		{component "engine"}
		{tags "engine"}
		{thickness 15
			{front 30}
			{top 6}
			{bottom 6}
		}
	}
	{boarder
		{anm "driver"
			{forward {begin "board_tank_left"} {end "pose_flak38-1_charger"}}
			{reverse {end "emit_tank_1_hold"}}
		}
		{anm "left"
			{forward {begin "board_tank_left"} {end "pose_vickers_gunlaeyr-R"}}
			{reverse {end "emit_tank_1_hold"}}
		}
		{anm "right"
			{forward {begin "board_tank_right"} {end "pose_flak41_gunlayer_1"}}
			{reverse {end "emit_tank_1_hold"}}
		}
	}

	("crew_human_visible_anm"	place(driver) 	 door(emit1) visor(driver) anm_left(driver) anm_right(driver))
	("crew_human_visible_anm"	place(commander) door(emit2) visor(around) anm_left(right)  anm_right(right))
	("crew_human_visible_anm"	place(gunner) 	 door(emit1) visor(main)   anm_left(left)   anm_right(left))
	
	{sensor
		{visor "around"
			{vision "vehicle_around"}		;// better vision than a in-closed turret 
		}
	}
	{extender "inventory"
		{box
			{item "dynamite"}
			{item "bullet47_ita aphe" 56}
			{item "bullet47_ita he" 24}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "47mm_m47_32" filling "bullet47_ita aphe" 1}
			{gunner "gunner"}
			{charger "commander"}
			("abm_dymamic"
				zeroing(2.5)
				dispersion(0.20)
			)
		}
	}
	
	{mass 6500}
	{Chassis
		("tank_trace" fx("tracks_sm2") step(0.4) len(-0.8))
		("mobility_tank"
			speed(42) ;----------Max speed when fully accelerated on road, km/h.
			reverse(8) ;---------Max speed in reverse on road, km/h.
			traverse(32) ;-------Track traverse, per second, in degrees.
			weight(6.5) ;--------Weight in Tonnes.
			power(70) ;---------Engine Power, in hp.
			track(4) ;-----------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(146) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(200) ;---------Range in km, off-road.
		)
	}

	{bone "gun_rot"
		{speed2 9}
	}
	{bone "gun_rot1"
		{speed2 10}
	}
}
