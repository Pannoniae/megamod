{game_entity
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc" scale(0.8))
	(include "/properties/selection/vehicle.inc" scale(0.75))
	{props "tank" "turret" "wheeled" "vision_lev02" "tractor" "detect_tank_mg"}
	{PatherId "vehicle.small"}
	{targetclass "armoredcar"}
	{targetSelector "tank_bullet"}
	{Extension "as37.mdl"}

	{volume "sticky"
		{tags "grenade_fg_target"}
		{able clear {contact} {touch}}
		{component "sticky_body"}
	}
	{component "sticky_body"}
	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 9}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 9}
	}
	{volume "body3"
		{tags "body"}
		{component "body"}
		{thickness 9}
	}
	{volume "engine1"
		{tags "engine"}
		{component "engine"}
		{thickness 8}
	}
	{volume "engine2"
		{tags "engine"}
		{component "engine"}
		{thickness 8}
	}
	
	("armoredcar_tier1")

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")	
	("wheel" args "wheelleft2")
		
	{sensor
		{visor "main" {bone "visor1"} {vision "vehicle_main"}}
		{visor "gunner" {bone "mgun_rot"}}
	}
	{placer 
		{place "driver" {visor "main"}}
		{place "gunner" {useVision} {visor "gunner"}}
	}
	
	("board_animation" place(driver)	  board_begin(board_body) board_end(seat_driver_car) base(open))
	("board_animation" place(gunner)	  board_begin(board_body) board_end(seat_m7_mgunner) base(open))
	("board_animation" place(passenger)	  board_begin(board_body) board_end(seat_passenger) base(open))




	("crew_human" place(driver)	door(emit1) bone(driver) animation(driver) 		group(crew))
	("crew_human" place(gunner)	door(emit1) bone(gunner) animation(gunner) 		group(crew))
	("crew_human" place(seat1) door(emit1) bone(seat01) animation(passenger) 	group(passenger))
	("crew_human" place(seat2) door(emit1) bone(seat02) animation(passenger) 	group(passenger))
	("crew_human" place(seat3) door(emit1) bone(seat03) animation(passenger) 	group(passenger))
	("crew_human" place(seat4) door(emit1) bone(seat04) animation(passenger) 	group(passenger))
	("crew_human" place(seat5) door(emit1) bone(seat05) animation(passenger) 	group(passenger))
	("crew_human" place(seat6) door(emit1) bone(seat06) animation(passenger) 	group(passenger))
	("crew_human" place(seat7) door(emit1) bone(seat07) animation(passenger) 	group(passenger))

	
	{extender "inventory"
		{weapon "mgun" {mask "mountable"}}
		{Box
			{item "oto_mod35" "grenade" 25}
			{item "smoke" "grenade" 10}
			{item "bandage_ita" 10}
			{item "dynamite"}
			{item "breda_38" filling "ammo 8x59" 24 {user "mgun"}}
			{item "ammo 8x59" 1000}
		}
	}
	
	{Weaponry
		{place "mgun"
			{type "main"}
			{LinkBone "mgun_rot"}
			{LinkAnimation "off"}
			{gunner "gunner"}
			{charger "gunner"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
	}
	{mass 5500}
	{Chassis "wheel"
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("mobility_car"
			speed(52) ;----------------------------------Max speed.
			speedatmaxturn(20) ;-------------------------Max speed at max turn.
			reverse(11) ;--------------------------------Max speed in Reverse.
			weight(5.5) ;-------------------------------Weight in Tonnes.
			power(67) ;----------------------------------Horse Power.
			fuel(119) ;-----------------------------------Fuel capacity in Litres.
			type(fuel) ;---------------------------------Fuel type.
			range(725) ;---------------------------------Range in Kilometers.
		)
	}
}
