{game_entity
	(include "/properties/tank_unarmed.ext")
	(include "/properties/shadow/tank.inc" scale(1.2))
	(include "/properties/selection/vehicle.inc" scale(1.6))
	(include "/properties/cannon_crew.ext")
	{props "spg" "with_gun" "cannon" "light" "-hatch" "motorized" "vision_lev06" "muzzle_75mm_76mm" "no_sandbags" "open_top" "detect_spg"}	
	{PatherId "thor"}
	{targetclass "howitzer"}
	{targetSelector "cannon_howitzer"}
	{Extension "t1_hmc.mdl"}
	{extension "crew.ext"}
	{collider "tank.light"}

	("tank_light_tier1")
	
	("ammo" args "ammo")
	
	("gun_shield" args "tshield1" 9.5)
	("gun_shield" args "tshield2" 9.5)
	("gun_shield" args "tshield3" 9.5)
	("gun_shield" args "tshield4" 9.5)
	("gun_shield" args "tshield5" 9.5)
	
	("tracks" repair(30) thickness(20))
	("gun" repair(30) thickness(30))

	{volume "body"
		{tags "body"}
		{component "body"}
		{thickness 9.5}
	}
	{Volume "engine"
		{tags "engine"}
		{component "engine"}
		{thickness 40}
	}
	{Volume "gun"
		{tags "gun"}
		{component "gun"}
		{thickness 30}
	}
	{Volume "trackleft"
		{thickness 30}
	}
	{Volume "trackright"
		{thickness 30}
	}
	{Volume "turret"
		{tags "turret"}
		{component "turret"}
		 {Thickness 16}
	}

	{extender "cannon"
		{animation
			{switch "close"}
			{move "" "" "" "" ""}
			{aim "" "" "" "" }
			{fire "" "" "" ""}
			{reload "" "" "" ""}
		}
		{move {workers "driver0" "driver1" "driver2" "driver3" minWorkers 1} {obstacle "close"}}	;// move state: cannon being pushed and which positions play animations
		{attack {workers "driver" "commander" "charger" "gunner"} {obstacle "open"}}			;// fire/attack state: cannon aim, fire, and reload events
	}

	{extender "inventory"
		{box
			
            {item "ammo bulletusa_75x272 he" 16}
			{item "ammo bulletusa_75x272 heat" 8}
			{item "ammo bulletusa_75x272 wp" 8}
			{item "satchel_charge_usa" 1}
		}
	}
	{Weaponry
		{place "gun"
			{weapon "75mm_m1a1_how" filling "bulletusa_75x272 he" 1}
			{Rotate}
			{foresight "foresight1"}
			{gunner "gunner"}
			{charger "charger"}
			{StationaryFiring}
			("abm_dymamic"
				zeroing(4.00)
				dispersion(0.25)
			)
		}
	}
	
	{mass 5000}
	{Chassis
		("tank_trace" fx("tracks_sm2") step(0.2) len(0.47))
		("mobility_tank"
			speed(34) ;----------Max speed when fully accelerated on road, km/h.
			reverse(12) ;---------Max speed in reverse on road, km/h.
			traverse(30) ;-------Track traverse, per second, in degrees.
			weight(5) ;-------Weight in Tonnes.
			power(75) ;---------Engine Power, in hp.
			track(10) ;---------Track performance: [0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(360) ;----------Fuel capacity in Litres.
			type(fuel) ;-------Fuel type. (diesel OR fuel)
			range(230) ;---------Range in km, off-road.
		)

		{DisableMoveWhileFiring}		
	}
      
	
	(mod "mp"
		{brain
			{properties
				{fire_mode hold}
			}
		}
	)
}
