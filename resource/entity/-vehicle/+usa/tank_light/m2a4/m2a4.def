{game_entity
	(include "/properties/tank.ext")
	(include "/properties/selection/vehicle.inc" scale(0.9))
	{props "light" "vision_lev03" "muzzle_37mm_47mm" "shield" "nwg" "detect_tank_light"}
	{extension "m2a4.mdl"}
	(include "m2a4.ext")
	{targetclass "tank_light"}
	{targetSelector "tank_light"}
	{patherId "stuart"}
	{collider "tank.light"}

	{extender "shield" {on}}

	("crew_4_human_2_extended")
	("gunner_open" place(gunner2) bone(gunner2) visorbone(mgun_rot) door(emit3) anm_left(gunner2) anm_right(gunner2) group(passenger))

	{boarder
		{anm "driver"
			{forward {begin "board_t26_driver"} {end "pose_t26_driver"} {base "open_driver"}}
			{reverse {end "board_t26_driver" -1} {base "open_driver" -1}}
		}
		{anm "left"
			{forward {begin "board_tank_left"}}
			{reverse {end "emit_tank_1_hold"}}
		}
		{anm "right"
			{forward {begin "board_tank_right"}}
			{reverse {end "emit_tank_1_hold"}}
		}
		{anm "gunner2"
			{forward {begin "board_HighArmor"} {end "pose_m3_stuart_gunner"}}
			{reverse {end "emit_tank_1"}}
		}
		{anm "armor1"
			{forward {begin "board_HighArmor"} {end "pose_seat_armor_1"}}
			{reverse {end "emit_tank_1"}}
		}
	}

	("seat_human" place(seat1) bone(seat1) door(emit3)  animation(armor1))
	("seat_human" place(seat2) bone(seat2) door(emit4)  animation(armor1))

	{extender "inventory"
		{weapon "mgun" {mask "mountable"}}
		{box
			{item "bulletusa_37 ap" 30}			; 103 rounds ;30/70% AP/HE
			{item "bulletusa_37 he" 72}
			{item "ammo mgun_usa belt" 8470}
			{item "satchel_charge_usa" 1}
			{item "browning_m19a4" filling "ammo mgun_usa belt" 250 {user "mgun"}}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "37mm_m5" filling "bulletusa_37 ap" 1}
			{gunner "gunner"}
			{charger "commander"}
			("abm_dymamic"
				zeroing(2.5)
				dispersion(0.2)
			)
		}
		{place "mgun2"
			{type "coaxial"}
			{weapon "browning_m19a4_tank" filled}
			{foresight "foresight5"}
			{gunner "gunner"}
			{charger "commander"}
			("abm_mgun")
			{basic}
		}
		{place "mgun1"
			{type "hull"}
			{weapon "browning_m19a4_tank" filled}
			{foresight "foresight3"}
			{gunner "gunner3"}
			{charger "gunner3"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
		{place "mgun"
			{type "aa"}
			{gunner "gunner2"}
			{charger "gunner2"}
			{LinkBone "mgun"}
			{LinkAnimation "off"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
	}

	{mass 11500}
	{Chassis
		("tank_trace" fx("tracks_sm2") step(0.2) len(0.47))
		("mobility_tank"
			speed(58) ;-----------Max speed when fully accelerated on road, km/h.
			reverse(7) ;---------Max speed in reverse on road, km/h.
			traverse(37) ;--------Track traverse, per second, in degrees.
			weight(11.5) ;--------Weight in Tonnes.
			power(262) ;----------Engine Power, in hp.
			track(10.0) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(204) ;-----------Fuel capacity in Litres.
			type(fuel) ;----------Fuel type. (diesel OR fuel)
			range(112) ;----------Range in km, off-road.
		)
	}

	{bone "turret"
		("turret_light" power_traverse(0)) ;// manual
	}
	{bone "gun_rot"
		{limits -6 19}
	}
}