{game_entity
	(include "/properties/tank_unarmed.ext")
	(include "/properties/shadow/tank.inc" scale(1.2))
	(include "/properties/selection/vehicle.inc" scale(1.6))
	(include "/properties/cannon_crew.ext")
	{props "spg" "with_gun" "cannon" "turret" "light" "hatch" "motorized" "vision_lev06" "muzzle_75mm_76mm" "no_sandbags" "open_top" "detect_spg" "detect_artillery"}	
	{PatherId "thor"}
	{targetclass "howitzer"}
	{targetSelector "cannon_howitzer"}
	{Extension "t3_hmc.mdl"}
	{extension "crew.ext"}
	{collider "tank.light"}
	
	("ammo" args "ammo")
	
	("tracks" repair(30) thickness(30))
	("gun" repair(30) thickness(30))
	 
	("make_component" args "mgturret" "aux_turret2")
	("aux_turret" repair(45))
	 
	{Volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 16}
	}
	{Volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 16}
	}
	{Volume "engine"
		{tags "engine"}
		{component "engine"}
		{thickness 40}
	}
	{Volume "gun"
		{tags "gun"}
		{component "gun"}
		{thickness 30}
	}
	{Volume "mgturret"
		 {Thickness 16}
	}
	{Volume "trackleft"
		{thickness 30}
	}
	{Volume "trackright"
		{thickness 30}
	}
	{Volume "turret"
		{tags "turret"}
		{component "turret"}
		 {Thickness 16}
	}
	
	{extender "cannon"
		{animation
			{switch "close"}
			;// "driver" "commander"
			{move "" "" "" "" ""}
			{aim "" "" "" "" }
			{fire "" "" "" ""}
			{reload "" "" "" ""}
		}
		{move {workers "driver1" "driver2" minWorkers 1} {obstacle ""}}	;// move state: cannon being pushed and which positions play animations
		{attack {workers "driver" "commander"} {obstacle ""}}			;// fire/attack state: cannon aim, fire, and reload events
	}

	{extender "inventory"
		{box
			
            {item "ammo bulletusa_75x272 he" 42}
			{item "ammo bulletusa_75x272 heat" 8}
			{item "ammo bulletusa_75x272 wp" 8}
			{item "ammo mgun_usa belt" 3600}
			{item "satchel_charge_usa" 1}
		}
	}
	{Weaponry
		{place "gun"
			{weapon "75mm_m1a1_how" filling "bulletusa_75x272 he" 1}
			{Rotate}
			{foresight "foresight1"}
			{gunner "commander"}
			{charger "commander"}
			{StationaryFiring}
			("abm_dymamic"
				zeroing(4.00)
				dispersion(0.25)
			)
		}
		{place "mgun"
			{type "mgun_turret_left"}
			{weapon "browning_m19a4_tank" filled}
			{foresight "foresight5"}
			{gunner "commander"}
			{charger "commander"}
			("abm_mgun")
			{basic}
			{ai_in_manual}
		}
	}
	
	{mass 9072}
	{Chassis
		("tank_trace" fx("tracks_sm2") step(0.2) len(0.47))
		("mobility_tank"
			speed(72) ;----------Max speed when fully accelerated on road, km/h.
			reverse(30) ;---------Max speed in reverse on road, km/h.
			traverse(30) ;-------Track traverse, per second, in degrees.
			weight(9.07) ;-------Weight in Tonnes.
			power(248) ;---------Engine Power, in hp.
			track(10) ;---------Track performance: [0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(360) ;----------Fuel capacity in Litres.
			type(fuel) ;-------Fuel type. (diesel OR fuel)
			range(230) ;---------Range in km, off-road.
		)

		{DisableMoveWhileFiring}		
	}
      
	
	(mod "mp"
		{brain
			{properties
				{fire_mode hold}
			}
		}
	)
}
