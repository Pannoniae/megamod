{game_entity
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc" scale(0.8))
	{extension "105mm_k29.mdl"}
	(include "/properties/selection/cannon.inc" scale(0.7))
	{props "vehicle" "cannon" "wheeled" "vision_lev05_can" "muzzle_100mm_105mm" "cannon_sandbag_standard" "trailer" "trailer_medium" "reset" "detect_artillery"}
	{PatherID  "cannon.large"}
	{targetclass "howitzer"}
	{targetSelector "cannon_howitzer"}

	("solid_wheel" args "wheelright")
	("solid_wheel" args "wheelleft")

	("gun" repair(20) thickness(30))
	("shield" args "shield" 10)
	("shield" args "shield_lower" 10)

	("armor_heavy_cannon")
	("crew_wheeled_cannon_4")
	

	{boarder
		{anm "gunner"
			{forward {end "pose_m5_gunlayer" 10}}
		}
		{anm "charger"
			{forward {end "pose_m42_charger" 10}}
		}
		{anm "charger2"
			{forward {end "pose_pdr25_charger" 10}}
		}
		{anm "commander"
			{forward {end "pose_watch_binocular" 10}}
		}
		{anm "driver1"	;// gunner
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"	;// gunner2
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "driver3"	;// charger
			{forward {end "mgun_browning_driver_l" 10}}
		}
		{anm "driver4"	;// charger2
			{forward {end "mgun_browning_driver_l" 10}}
		}
		{anm "seat1"	;// gunner
			{forward {end "pose_seat_cannon_left" 10}}
		}
		{anm "seat2"	;// gunner2
			{forward {end "pose_seat_cannon_right" 10}}
		}
		{anm "seat3"	;// gunner
			{forward {end "pose_seat_cannon_left" 10}}
		}
		{anm "seat4"	;// gunner2
			{forward {end "pose_seat_cannon_right" 10}}
		}
	}

	{extender "cannon"
		{animation
			{switch "close"}
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right" "mgun_browning_driver_l" "mgun_browning_driver_l"}
			{aim "cannon_zis3_gunlayer" "cannon_zis3_gunlayer" "" ""}
			{fire "cannon_gunlayer_fire-alert" "" "cannon_zis3_charger_fire" ""}
			{reload "" "" "cannon_zis3_charger" ""}
		}
		{move {workers "driver1" "driver2" "driver3" "driver4"} {obstacle "close"} {minWork 2}}			
		{attack {workers "gunner" "charger" "charger2" "commander"} {obstacle "open"}}		
		{trailing {workers "seat1" "seat2" "seat3" "seat4"}}								
	}

	{extender "inventory"
		{box
			{item "bullet_105x380 fin he" 20}
			{item "sandbag_vehicle" 1}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{weapon "105mm_k29" filling "bullet_105x380 fin he" 1}
			{RestoreIKAfterAim}
			("abm_dymamic_gun"
				zeroing(3.5)
				dispersion(0.09)
			)
		}
	}

	{mass 1985}
	{Chassis "track"
		("car_trace" fx("tracewheel06") step(0.14) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("mobility_cannon"
			speed(5.5) ;----------------------------------Max speed.
			weight(1985) ;--------------------------------Weight in Kilograms.
		)
	}

	{bone "basis"
		{speed2 4}
	}
	{bone "gun_rot"
		{limits -6 40}
		{speed2 6}
	}
	{bone "turret"
		{limits -28 28}
		{speed2 6}
	}
	(mod "mp"
		{brain
			{properties
				{fire_mode hold}
			}
		}	
	)
}