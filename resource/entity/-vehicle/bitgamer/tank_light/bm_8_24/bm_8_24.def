{game_entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(0.9))
        {props "light" "with_gun" "katusha" "tractor" "tractor_medium" "vision_lev06" "detect_spg"}
	(include "bm_8_24.ext")
	{targetSelector "rocket"}
	{targetclass "howitzer"}
	{PatherID "t60"}
	{collider "tank.light"}

	("crew_2_human")

	{boarder
		{anm "left"
			{forward	{begin	"board_tank_left"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
	}

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))

	{extender "inventory"
		{box
			{item "ammo bm8" 640}
		}
	}
	
	{Weaponry
		{place "gun"
			{weapon "weapon bm8" filling "ammo bm8" 24}
			{Barrels 24}
			{charger "gunner"}
			{StationaryFiring}
			{basic}
		}
	}

	{mass 5800}
	{Chassis
		("tank_trace" fx("tracks_sm2") step(0.15) len(0.6))
		("mobility_tank"
			speed(45) ;----------Max speed when fully accelerated on road, km/h.
			reverse(15) ;--------Max speed in reverse on road, km/h.
			traverse(30) ;-------Track traverse, per second, in degrees.
			weight(5.8) ;--------Weight in Tonnes.
			power(70) ;----------Engine Power, in hp.
			track(4.0) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(307) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(300) ;---------Range in km, off-road.
		)
	}
        {Extension "bm_8_24.mdl"}
	(mod "mp"
		{brain
			{properties
				{fire_mode hold}
			}
		}
	)	
}
