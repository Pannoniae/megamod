{game_entity
	(include "/properties/tank_assaultgun.ext")
	(include "/properties/shadow/tank.inc" scale(1.3))
	(include "/properties/selection/vehicle.inc" scale(0.7))
	{props "td" "light" "-turret" "mantlet" "vision_lev02" "muzzle_37mm_40mm_auto_sides" "shield" "open_top" "detect_tank_light"}
	(include "zsu37.ext")
	{targetclass "tank_light"}
	{targetSelector "tank_zenite"}
	{patherId "panzer38"}
	{collider "tank.light"}
	
	{extender "enumerator"}	

	{boarder
		{anm "driver"
			{forward	{begin	"board_su76"}}
			{reverse 	{end	"board_su76" -1}}
		}
		{anm "charger"
			{forward	{begin	"board_su76"} {end "seat_armor"}}
			{reverse 	{end	"board_su76" -1}}
		}
		{anm "gunner"
			{forward	{begin	"board_su76"} {end "seat_driver_car"}}
			{reverse 	{end	"board_su76" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_su76"} {end "seat_armor"}}
			{reverse 	{end	"board_su76" -1}}
		}
	}

	(define "crew_human"
		{placer
			{place "%place"
				{group "crew"}
				{linkbone "%place"}
				{turnoff {sensor} {shadow}}
				{visor "main"}
			}
		}
		{boarder
			{door "%door1"}
			{door "%door2"}
			{link "%door1" "%place" {anm "%place"} {forward putoff} {reverse puton}}
			{link "%door2" "%place" {anm "%place"} {forward putoff} {reverse puton}}
		}
	)

	{placer
		{place "driver" {group "crew"} {visor "driver"}}
	}
	{boarder
		{door "emit1"}
		{door "emit2"}
		{link "emit1" "driver" {anm "driver"} {forward putoff} {reverse puton}}
		{link "emit2" "driver" {anm "driver"} {forward putoff} {reverse puton}}
		{link "emit1" "commander" {anm "commander"} {forward putoff} {reverse puton}}
		{link "emit2" "commander" {anm "commander"} {forward putoff} {reverse puton}}
	}

	("crew_human" place(gunner)	    door1(emit1) door2(emit2))
	("crew_human" place(charger)	door1(emit1) door2(emit2))

	{placer
		{place "commander" {group "crew"} {visor "main"}}
	}

	{extender "inventory"
		{box
			{item "bulletger_37_auto ap" 520}
                        {item "bulletger_37_auto he" 520}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}                        
			{weapon "37mm_61k" filling "bulletrus_37_auto he" 10}        
			("abm_dymamic_gun"
				zeroing(3.0)
				dispersion(0.13)
			)
		}
	}
	
	{mass 10500}
	{Chassis
		("tank_trace" fx("tracks_sm2") step(0.2) len(0.55))
		("mobility_tank"
			speed(47) ;----------Max speed when fully accelerated on road, km/h.
			reverse(8);----------Max speed in reverse on road, km/h.
			traverse(35) ;-------Track traverse, per second, in degrees.
			weight(11.0) ;-------Weight in Tonnes.
			power(150) ;---------Engine Power, in hp.
			track(4.5) ;---------Track performance: (0,10], 10=ideal. Sluggish tanks and vehicles with narrow and non-gripping tracks have a lower performance.
			fuel(550) ;----------Fuel capacity in Litres.
			type(fuel) ;---------Fuel type. (diesel OR fuel)
			range(140) ;---------Range in km, off-road.
		)
	}
	{Extension "zsu37.mdl"}
	
	{bone "turret"
		{speed 0.015}
	}
        {bone "gun_rot"
		{speed 0.007}
        }
}
